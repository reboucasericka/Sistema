@model IEnumerable<Sistema.Data.Entities.PriceTable>
@{
    ViewData["Title"] = "Tabela de Preços";
}

<div class="container tabela-precos">
    <h2 class="titulo">Tabela de Preços</h2>

    @foreach (var categoria in Model.GroupBy(p => p.Category))
    {
        <div class="categoria">@categoria.Key</div>

        @foreach (var item in categoria)
        {
            <div class="linha-preco">
                <span class="servico">@item.ServiceName</span>
                <span class="preco">€@item.Price.ToString("N2")</span>
            </div>
        }
    }
</div>
