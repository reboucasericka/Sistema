@model IEnumerable<Sistema.Data.Entities.Service>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Serviços";
}

<style>
    .services-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem 0;
    }
    
    .services-title {
        text-align: center;
        font-size: 3rem;
        font-weight: bold;
        color: #2c3e50;
        margin-bottom: 3rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }
    
    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
    }
    
    .service-card {
        background: linear-gradient(135deg, #ff6b9d 0%, #ff8fab 100%);
        border: 2px solid #ffb3d1;
        border-radius: 15px;
        padding: 2rem;
        text-align: center;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(255, 107, 157, 0.3);
        position: relative;
        overflow: hidden;
    }
    
    .service-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(45deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
        pointer-events: none;
    }
    
    .service-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(255, 107, 157, 0.4);
    }
    
    .service-name {
        font-size: 1.4rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
    }
    
    .service-category {
        font-size: 0.9rem;
        opacity: 0.9;
        font-style: italic;
        margin-bottom: 1rem;
        position: relative;
        z-index: 1;
    }
    
    .service-price {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-shadow: 0 2px 4px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
    }
    
    .service-description {
        font-size: 0.9rem;
        opacity: 0.9;
        line-height: 1.4;
        position: relative;
        z-index: 1;
    }
    
    .service-image {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        object-fit: cover;
        margin: 0 auto 1rem;
        border: 3px solid rgba(255,255,255,0.3);
        position: relative;
        z-index: 1;
    }
    
    .no-services {
        text-align: center;
        color: #6c757d;
        font-size: 1.2rem;
        margin-top: 3rem;
    }
    
    @@media (max-width: 768px) {
        .services-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .services-title {
            font-size: 2rem;
        }
        
        .service-card {
            padding: 1.5rem;
        }
    }
</style>

<div class="services-container">
    <div class="container">
        <h1 class="services-title">Nossos Serviços</h1>
        
        @if (Model != null && Model.Any())
        {
            <div class="services-grid">
                @foreach (var service in Model.Where(s => s.IsActive))
                {
                    <div class="service-card">
                        @if (!string.IsNullOrEmpty(service.PhotoPath))
                        {
                            <img src="@service.PhotoPath" alt="@service.Name" class="service-image" />
                        }
                        else
                        {
                            <div class="service-image" style="background: rgba(255,255,255,0.2); display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-concierge-bell" style="font-size: 2rem;"></i>
                            </div>
                        }
                        
                        <div class="service-name">@service.Name</div>
                        <div class="service-category">@service.Category?.Name</div>
                        <div class="service-price">@service.Price.ToString("C")</div>
                        
                        @if (!string.IsNullOrEmpty(service.Description))
                        {
                            <div class="service-description">@service.Description</div>
                        }
                        
                        @if (service.DurationInMinutes > 0)
                        {
                            <div class="service-description">
                                <i class="fas fa-clock"></i> Duração: @service.DurationInMinutes minutos
                            </div>
                        }
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-services">
                <i class="fas fa-concierge-bell fa-3x mb-3"></i>
                <p>Nenhum serviço disponível no momento.</p>
                <p>Volte em breve para conhecer nossos serviços!</p>
            </div>
        }
    </div>
</div>
