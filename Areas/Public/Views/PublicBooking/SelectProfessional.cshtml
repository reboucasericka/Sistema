@model IEnumerable<Sistema.Data.Entities.Professional>

@{
    ViewData["Title"] = "Escolher Profissional";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var serviceId = ViewBag.ServiceId;
    var serviceName = ViewBag.ServiceName;
}

<div class="booking-container">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="booking-header text-center mb-5">
                    <h1 class="display-4 fw-bold text-primary">Escolher Profissional</h1>
                    <p class="lead text-muted">Selecione o profissional para o serviço: <strong>@serviceName</strong></p>
                </div>

                <!-- Progress Steps -->
                <div class="booking-steps mb-5">
                    <div class="row">
                        <div class="col-3">
                            <div class="step completed">
                                <div class="step-number">✓</div>
                                <div class="step-title">Serviço</div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="step active">
                                <div class="step-number">2</div>
                                <div class="step-title">Profissional</div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="step">
                                <div class="step-number">3</div>
                                <div class="step-title">Horário</div>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="step">
                                <div class="step-number">4</div>
                                <div class="step-title">Confirmar</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Professionals Grid -->
                <div class="row">
                    @if (Model?.Any() == true)
                    {
                        @foreach (var professional in Model)
                        {
                            <div class="col-lg-4 col-md-6 mb-4">
                                <div class="professional-card h-100">
                                    <div class="professional-avatar">
                                        @if (professional.ImageId != Guid.Empty)
                                        {
                                            <img src="@professional.ImageFullPath" alt="@professional.Name" class="img-fluid">
                                        }
                                        else
                                        {
                                            <div class="avatar-placeholder">
                                                <i class="fas fa-user"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="professional-content">
                                        <h5 class="professional-name">@professional.Name</h5>
                                        <p class="professional-specialty">@professional.Specialty</p>
                                        <div class="professional-rating">
                                            <div class="stars">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                            </div>
                                            <span class="rating-text">(4.8)</span>
                                        </div>
                                        <a asp-action="SelectTime" 
                                           asp-route-serviceId="@serviceId" 
                                           asp-route-professionalId="@professional.ProfessionalId" 
                                           class="btn btn-primary btn-block">
                                            <i class="fas fa-calendar-check"></i> Escolher Este Profissional
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-12">
                            <div class="alert alert-info text-center">
                                <i class="fas fa-info-circle fa-2x mb-3"></i>
                                <h4>Nenhum profissional disponível</h4>
                                <p>Não há profissionais disponíveis para este serviço no momento.</p>
                                <a asp-action="Create" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Voltar aos Serviços
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.booking-container {
    padding: 60px 0;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    min-height: 100vh;
}

.booking-header h1 {
    color: #2c3e50;
    margin-bottom: 20px;
}

.booking-steps {
    max-width: 800px;
    margin: 0 auto;
}

.step {
    text-align: center;
    position: relative;
}

.step-number {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #e9ecef;
    color: #6c757d;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin: 0 auto 10px;
    transition: all 0.3s ease;
}

.step.active .step-number {
    background: #007bff;
    color: white;
}

.step.completed .step-number {
    background: #28a745;
    color: white;
}

.step-title {
    font-size: 0.9rem;
    color: #6c757d;
    font-weight: 500;
}

.step.active .step-title {
    color: #007bff;
    font-weight: 600;
}

.step.completed .step-title {
    color: #28a745;
    font-weight: 600;
}

.professional-card {
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    border: none;
    text-align: center;
}

.professional-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.2);
}

.professional-avatar {
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    position: relative;
}

.professional-avatar img {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid white;
}

.avatar-placeholder {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: rgba(255,255,255,0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    border: 4px solid white;
}

.professional-content {
    padding: 25px;
}

.professional-name {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 10px;
}

.professional-specialty {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 15px;
}

.professional-rating {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-bottom: 20px;
}

.stars {
    color: #ffc107;
}

.rating-text {
    color: #6c757d;
    font-size: 0.9rem;
}

.btn-block {
    width: 100%;
    padding: 12px;
    font-weight: 500;
    border-radius: 8px;
    transition: all 0.3s ease;
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
}

@@media (max-width: 768px) {
    .booking-container {
        padding: 40px 0;
    }
    
    .booking-header h1 {
        font-size: 2rem;
    }
    
    .step-number {
        width: 40px;
        height: 40px;
        font-size: 0.9rem;
    }
    
    .step-title {
        font-size: 0.8rem;
    }
}
</style>
