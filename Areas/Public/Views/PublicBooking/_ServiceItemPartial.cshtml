@model Sistema.Models.Public.PublicServiceViewModel

<div class="col-md-6 col-lg-4 mb-4">
    <div class="card h-100 service-item-card" style="transition: transform 0.2s; cursor: pointer;" onclick="location.href='@Url.Action("Schedule", "Booking", new { id = Model.ServiceId })'">
        <div class="card-img-top-container">
            @if (!string.IsNullOrEmpty(Model.ImageId))
            {
                <img src="~/uploads/services/@Model.ImageId" alt="@Model.Name" class="card-img-top" style="height: 200px; object-fit: cover;">
            }
            else
            {
                <div class="card-img-top bg-primary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-concierge-bell fa-3x"></i>
                </div>
            }
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text text-muted">@Model.CategoryName</p>
            <p class="card-text">@Model.Description</p>
            <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="h5 text-primary mb-0">
                        @String.Format(new System.Globalization.CultureInfo("pt-PT"), "{0:C}", Model.Price)
                    </span>
                    <span class="badge bg-secondary">@Model.Duration</span>
                </div>
                <div class="d-grid">
                    <a asp-action="Schedule" asp-route-id="@Model.ServiceId" class="btn btn-primary">
                        <i class="fas fa-calendar-plus"></i> Book Now
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .service-item-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
</style>
