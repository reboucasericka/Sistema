@model Sistema.Models.PaginatedList<Sistema.Data.Entities.Appointment>
@{
    ViewData["Title"] = "Appointment History";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-history me-2"></i>Appointment History - @ViewBag.ProfessionalName
                    </h3>
                    <div>
                        <a asp-action="Dashboard" class="btn btn-info me-2">
                            <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Profile
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Customer</th>
                                        <th>Service</th>
                                        <th>Status</th>
                                        <th>Price</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@appointment.Date.ToString("MMM dd, yyyy")</span>
                                            </td>
                                            <td>
                                                <strong>@appointment.Time.ToString(@"hh\:mm")</strong>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@appointment.Client?.Name</strong>
                                                        <br>
                                                        <small class="text-muted">@appointment.Client?.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@appointment.Service?.Name</span>
                                            </td>
                                            <td>
                                                @switch (appointment.Status)
                                                {
                                                    case "Pendente":
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case "Confirmado":
                                                        <span class="badge bg-success">Confirmed</span>
                                                        break;
                                                    case "Concluído":
                                                        <span class="badge bg-info">Completed</span>
                                                        break;
                                                    case "Cancelado":
                                                        <span class="badge bg-danger">Cancelled</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@appointment.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @if (appointment.Service?.Price != null)
                                                {
                                                    <strong>€@appointment.Service.Price.ToString("N2")</strong>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">N/A</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.Notes))
                                                {
                                                    <span class="text-muted">@appointment.Notes</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No notes</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <nav aria-label="Appointment history pagination">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="History" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                                        <a class="page-link" asp-action="History" asp-route-pageNumber="@i">@i</a>
                                    </li>
                                }
                                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                                    <a class="page-link" asp-action="History" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
                                </li>
                            </ul>
                        </nav>

                        <div class="text-center text-muted">
                            Showing @((Model.PageIndex - 1) * Model.PageSize + 1) to @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalCount)) of @Model.TotalCount appointments
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-history fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No appointment history</h5>
                            <p class="text-muted">You don't have any appointments in your history yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
