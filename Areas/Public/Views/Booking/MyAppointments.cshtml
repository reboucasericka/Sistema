@model IEnumerable<Sistema.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Meus Agendamentos";
    Layout = "_Layout";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-calendar-alt"></i> Meus Agendamentos
                    </h3>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Serviço</th>
                                        <th>Data</th>
                                        <th>Horário</th>
                                        <th>Status</th>
                                        <th>Preço</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(appointment.Service?.PhotoPath))
                                                    {
                                                        <img src="~/uploads/services/@appointment.Service.PhotoPath" alt="@appointment.Service.Name" class="rounded-circle me-2" width="32" height="32">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                            <i class="fas fa-concierge-bell text-white"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <strong>@appointment.Service?.Name</strong>
                                                        <br><small class="text-muted">@appointment.Service?.Category?.Name</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@appointment.StartTime.Date.ToString("dd/MM/yyyy")</td>
                                            <td>@appointment.StartTime.ToString("HH:mm")</td>
                                            <td>
                                                @switch (appointment.Status?.ToLower())
                                                {
                                                    case "agendado":
                                                        <span class="badge bg-primary">Agendado</span>
                                                        break;
                                                    case "confirmado":
                                                        <span class="badge bg-success">Confirmado</span>
                                                        break;
                                                    case "cancelado":
                                                        <span class="badge bg-danger">Cancelado</span>
                                                        break;
                                                    case "concluído":
                                                        <span class="badge bg-info">Concluído</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@appointment.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@String.Format(new System.Globalization.CultureInfo("pt-PT"), "{0:C}", appointment.Service?.Price)</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (appointment.Status?.ToLower() == "agendado" || appointment.Status?.ToLower() == "confirmado")
                                                    {
                                                        <a asp-action="Cancel" asp-route-id="@appointment.AppointmentId" class="btn btn-warning btn-sm">
                                                            <i class="fas fa-times"></i> Cancelar
                                                        </a>
                                                    }
                                                    <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#detailsModal_@appointment.AppointmentId">
                                                        <i class="fas fa-eye"></i> Detalhes
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Modal de Detalhes -->
                                        <div class="modal fade" id="detailsModal_@appointment.AppointmentId" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Detalhes do Agendamento</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-4">
                                                                @if (!string.IsNullOrEmpty(appointment.Service?.PhotoPath))
                                                                {
                                                                    <img src="@appointment.Service.PhotoPath" alt="@appointment.Service.Name" class="img-fluid rounded">
                                                                }
                                                                else
                                                                {
                                                                    <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center" style="height: 120px;">
                                                                        <i class="fas fa-concierge-bell fa-3x"></i>
                                                                    </div>
                                                                }
                                                            </div>
                                                            <div class="col-md-8">
                                                                <h5>@appointment.Service?.Name</h5>
                                                                <p class="text-muted">@appointment.Service?.Description</p>
                                                                
                                                                <dl class="row">
                                                                    <dt class="col-sm-4">Data:</dt>
                                                                    <dd class="col-sm-8">@appointment.StartTime.Date.ToString("dd/MM/yyyy")</dd>
                                                                    
                                                                    <dt class="col-sm-4">Horário:</dt>
                                                                    <dd class="col-sm-8">@appointment.StartTime.ToString("HH:mm")</dd>
                                                                    
                                                                    <dt class="col-sm-4">Duração:</dt>
                                                                    <dd class="col-sm-8">@appointment.Service?.Duration</dd>
                                                                    
                                                                    <dt class="col-sm-4">Categoria:</dt>
                                                                    <dd class="col-sm-8">@appointment.Service?.Category?.Name</dd>
                                                                    
                                                                    <dt class="col-sm-4">Preço:</dt>
                                                                    <dd class="col-sm-8">@appointment.Service?.Price.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</dd>
                                                                    
                                                                    <dt class="col-sm-4">Status:</dt>
                                                                    <dd class="col-sm-8">
                                                                        @switch (appointment.Status?.ToLower())
                                                                        {
                                                                            case "agendado":
                                                                                <span class="badge bg-primary">Agendado</span>
                                                                                break;
                                                                            case "confirmado":
                                                                                <span class="badge bg-success">Confirmado</span>
                                                                                break;
                                                                            case "cancelado":
                                                                                <span class="badge bg-danger">Cancelado</span>
                                                                                break;
                                                                            case "concluído":
                                                                                <span class="badge bg-info">Concluído</span>
                                                                                break;
                                                                            default:
                                                                                <span class="badge bg-secondary">@appointment.Status</span>
                                                                                break;
                                                                        }
                                                                    </dd>
                                                                    
                                                                    <dt class="col-sm-4">Criado em:</dt>
                                                                    <dd class="col-sm-8">@appointment.StartTime.ToString("dd/MM/yyyy HH:mm")</dd>
                                                                </dl>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Nenhum agendamento encontrado</h4>
                            <p class="text-muted">Você ainda não possui agendamentos.</p>
                            <a asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-calendar-plus"></i> Fazer um Agendamento
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>