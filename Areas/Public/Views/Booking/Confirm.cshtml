@model Sistema.Models.Public.BookingViewModel

@{
    ViewData["Title"] = "Confirmar Agendamento";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-calendar-check"></i> Confirmar Agendamento
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Confirme os dados do seu agendamento:</strong>
                    </div>

                    <!-- Resumo do Agendamento -->
                    <div class="row mb-4">
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.PhotoPath))
                            {
                                <img src="~/uploads/services/@Model.PhotoPath" alt="@Model.ServiceName" class="img-fluid rounded">
                            }
                            else
                            {
                                <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center" style="height: 120px;">
                                    <i class="fas fa-concierge-bell fa-3x"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.ServiceName</h4>
                            <p class="text-muted">@Model.Duration</p>
                            <p class="text-muted">@Model.Description</p>
                        </div>
                    </div>

                    <!-- Detalhes do Agendamento -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Detalhes do Agendamento</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-4">Data:</dt>
                                        <dd class="col-sm-8">@Model.SelectedDate.ToString("dd/MM/yyyy")</dd>
                                        
                                        <dt class="col-sm-4">Horário:</dt>
                                        <dd class="col-sm-8">@Model.SelectedTime</dd>
                                        
                                        <dt class="col-sm-4">Duração:</dt>
                                        <dd class="col-sm-8">@Model.Duration</dd>
                                        
                                        @if (!string.IsNullOrEmpty(Model.ProfessionalName))
                                        {
                                            <dt class="col-sm-4">Profissional:</dt>
                                            <dd class="col-sm-8">@Model.ProfessionalName</dd>
                                        }
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0">Resumo Financeiro</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row">
                                        <dt class="col-sm-6">Service Price:</dt>
                                        <dd class="col-sm-6">@String.Format(new System.Globalization.CultureInfo("pt-PT"), "{0:C}", Model.Price)</dd>
                                        
                                        <dt class="col-sm-6">Service Fee:</dt>
                                        <dd class="col-sm-6">€0,00</dd>
                                        
                                        <hr>
                                        
                                        <dt class="col-sm-6"><strong>Total:</strong></dt>
                                        <dd class="col-sm-6"><strong>@String.Format(new System.Globalization.CultureInfo("pt-PT"), "{0:C}", Model.Price)</strong></dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Informações Importantes -->
                    <div class="alert alert-warning mt-4">
                        <h6><i class="fas fa-exclamation-triangle"></i> Informações Importantes:</h6>
                        <ul class="mb-0">
                            <li>O agendamento será confirmado após o pagamento.</li>
                            <li>Você receberá um email de confirmação.</li>
                            <li>Cancelamentos devem ser feitos com pelo menos 24h de antecedência.</li>
                            <li>Em caso de atraso superior a 15 minutos, o agendamento poderá ser cancelado.</li>
                        </ul>
                    </div>

                    <!-- Formulário de Confirmação -->
                    <form asp-action="ConfirmBooking" method="post">
                        <input type="hidden" asp-for="ServiceId" />
                        <input type="hidden" asp-for="ServiceName" />
                        <input type="hidden" asp-for="Price" />
                        <input type="hidden" asp-for="Duration" />
                        <input type="hidden" asp-for="Description" />
                        <input type="hidden" asp-for="PhotoPath" />
                        <input type="hidden" asp-for="SelectedDate" />
                        <input type="hidden" asp-for="SelectedTime" />
                        <input type="hidden" asp-for="ProfessionalName" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Schedule" asp-route-id="@Model.ServiceId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check"></i> Confirmar Agendamento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
