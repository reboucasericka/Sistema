    </form>
</div>

<!-- Calend√°rio de Agendamentos -->
<div class="calendar-container">
    <h3 class="calendar-title">
        <i class="bi bi-calendar3 me-2"></i>
        Calend√°rio de Agendamentos
    </h3>
    <div id="calendar"></div>
</div>

<!-- Lista de Agendamentos -->
