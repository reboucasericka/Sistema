@model IEnumerable<Sistema.Data.Entities.Appointment>
@{
    ViewData["Title"] = "Professional Appointments";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-calendar me-2"></i>Appointments for @ViewBag.ProfessionalName
                    </h3>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Professionals
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Date</th>
                                        <th>Time</th>
                                        <th>Customer</th>
                                        <th>Service</th>
                                        <th>Status</th>
                                        <th>Notes</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-primary">@appointment.StartTime.Date.ToString("MMM dd, yyyy")</span>
                                            </td>
                                            <td>
                                                <strong>@appointment.StartTime.ToString("HH:mm")</strong>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                    <div>
                                                        <strong>@appointment.Customer?.User?.FirstName @appointment.Customer?.User?.LastName</strong>
                                                        <br>
                                                        <small class="text-muted">@appointment.Customer?.User?.Email</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">@appointment.Service?.Name</span>
                                                <br>
                                                <small class="text-muted">@(appointment.TotalPrice?.ToString("N2") != null ? "â‚¬" + appointment.TotalPrice?.ToString("N2") : "N/A")</small>
                                            </td>
                                            <td>
                                                @switch (appointment.Status)
                                                {
                                                    case "Pending":
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case "Confirmed":
                                                        <span class="badge bg-success">Confirmed</span>
                                                        break;
                                                    case "Completed":
                                                        <span class="badge bg-info">Completed</span>
                                                        break;
                                                    case "Canceled":
                                                        <span class="badge bg-danger">Cancelled</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@appointment.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(appointment.Notes))
                                                {
                                                    <span class="text-muted">@appointment.Notes</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No notes</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No appointments found</h5>
                            <p class="text-muted">This professional doesn't have any appointments yet.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
