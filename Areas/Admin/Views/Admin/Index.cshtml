@{
    ViewData["Title"] = "Dashboard Administrativo";
}

<div class="content-header">
    <h1><i class="fas fa-tachometer-alt me-2"></i>Dashboard Administrativo</h1>
    <p class="text-muted">Visão geral do sistema</p>
</div>

<!-- Small Boxes de Estatísticas -->
<div class="row mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>150</h3>
                <p>Clientes Ativos</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a href="/Admin/AdminClients" class="small-box-footer">
                Mais informações <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>45</h3>
                <p>Agendamentos Hoje</p>
            </div>
            <div class="icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <a href="/Admin/AdminAppointments" class="small-box-footer">
                Ver agenda <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>€ 12.450</h3>
                <p>Receita do Mês</p>
            </div>
            <div class="icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <a href="/Admin/AdminReports" class="small-box-footer">
                Ver relatórios <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>8</h3>
                <p>Pendências</p>
            </div>
            <div class="icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <a href="/Admin/AdminNotifications" class="small-box-footer">
                Ver notificações <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>

<!-- Cards de Informações -->
<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-line me-2"></i>Últimos Agendamentos
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Cliente</th>
                                <th>Serviço</th>
                                <th>Data</th>
                                <th>Status</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Avatar">
                                        <div>
                                            <div class="fw-bold">Maria Silva</div>
                                            <small class="text-muted">maria@email.com</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Corte + Escova</td>
                                <td>15/01/2024 - 14:30</td>
                                <td><span class="badge bg-success">Confirmado</span></td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Avatar">
                                        <div>
                                            <div class="fw-bold">João Santos</div>
                                            <small class="text-muted">joao@email.com</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Manicure</td>
                                <td>15/01/2024 - 16:00</td>
                                <td><span class="badge bg-warning">Pendente</span></td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://via.placeholder.com/40" class="rounded-circle me-2" alt="Avatar">
                                        <div>
                                            <div class="fw-bold">Ana Costa</div>
                                            <small class="text-muted">ana@email.com</small>
                                        </div>
                                    </div>
                                </td>
                                <td>Massagem</td>
                                <td>16/01/2024 - 10:00</td>
                                <td><span class="badge bg-info">Agendado</span></td>
                                <td>
                                    <div class="d-flex gap-2">
                                        <button class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-bell me-2"></i>Notificações Recentes
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Novo Cliente</div>
                            <small>Maria Silva se cadastrou no sistema</small>
                        </div>
                        <span class="badge bg-primary rounded-pill">1</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Agendamento Cancelado</div>
                            <small>João Santos cancelou para amanhã</small>
                        </div>
                        <span class="badge bg-warning rounded-pill">2</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-start">
                        <div class="ms-2 me-auto">
                            <div class="fw-bold">Pagamento Recebido</div>
                            <small>€ 150,00 de Ana Costa</small>
                        </div>
                        <span class="badge bg-success rounded-pill">3</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2"></i>Resumo Financeiro
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <div class="border-end">
                            <h4 class="text-success">€ 8.450</h4>
                            <small class="text-muted">Receita</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <h4 class="text-danger">€ 2.100</h4>
                        <small class="text-muted">Despesas</small>
                    </div>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <span>Lucro Líquido:</span>
                    <strong class="text-success">€ 6.350</strong>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Alertas e Ações Rápidas -->
<div class="row mt-4">
    <div class="col-12">
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Bem-vindo ao painel administrativo!</strong> 
            Aqui você pode gerenciar todos os aspectos do seu negócio. 
            <a href="/Admin/AdminSettings" class="alert-link">Configure suas preferências</a>.
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-rocket me-2"></i>Ações Rápidas
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Admin/AdminAppointments/Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Novo Agendamento
                    </a>
                    <a href="/Admin/AdminClients/Create" class="btn btn-success">
                        <i class="fas fa-user-plus me-2"></i>Novo Cliente
                    </a>
                    <a href="/Admin/AdminServices/Create" class="btn btn-info">
                        <i class="fas fa-concierge-bell me-2"></i>Novo Serviço
                    </a>
                    <a href="/Admin/AdminReports" class="btn btn-warning">
                        <i class="fas fa-chart-bar me-2"></i>Ver Relatórios
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-cog me-2"></i>Configurações do Sistema
                </h5>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="/Admin/AdminSettings" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-cog me-2"></i>Configurações Gerais</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a href="/Admin/AdminProfessionals" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-user-tie me-2"></i>Profissionais</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a href="/Admin/AdminServices" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-concierge-bell me-2"></i>Serviços</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                    <a href="/Admin/AdminNotifications" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span><i class="fas fa-bell me-2"></i>Notificações</span>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>