@model Sistema.Models.Admin.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard - @ewellinjordaobeauty";
    Layout = "_AdminLayout";
}

<!-- Content Header -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Small boxes (Stat cards) -->
<div class="row">
    <!-- Total de Agendamentos -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <h3>@Model.TotalAppointments</h3>
                <p>Total de Agendamentos</p>
            </div>
            <div class="icon">
                <i class="fas fa-calendar-alt"></i>
            </div>
            <a href="@Url.Action("Index", "Appointments")" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Clientes -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <h3>@Model.TotalClients</h3>
                <p>Clientes Cadastrados</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a href="@Url.Action("Index", "Clients")" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Profissionais -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <h3>@Model.TotalProfessionals</h3>
                <p>Profissionais</p>
            </div>
            <div class="icon">
                <i class="fas fa-user-md"></i>
            </div>
            <a href="@Url.Action("Index", "Professionals")" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>

    <!-- Agendamentos de Hoje -->
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <h3>@Model.TodayAppointments</h3>
                <p>Agendamentos Hoje</p>
            </div>
            <div class="icon">
                <i class="fas fa-clock"></i>
            </div>
            <a href="@Url.Action("Index", "Appointments")" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

<!-- Estatísticas Adicionais -->
<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-secondary">
            <div class="inner">
                <h3>@Model.TotalServices</h3>
                <p>Serviços Disponíveis</p>
            </div>
            <div class="icon">
                <i class="fas fa-spa"></i>
            </div>
            <a href="@Url.Action("Index", "Services")" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
    
    <div class="col-lg-3 col-6">
        <div class="small-box bg-primary">
            <div class="inner">
                <h3>@Model.PendingAppointments</h3>
                <p>Agendamentos Pendentes</p>
            </div>
            <div class="icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <a href="@Url.Action("Index", "Appointments")" class="small-box-footer">Mais informações <i class="fas fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Agendamentos de Hoje -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-calendar-day mr-1"></i>
                    Agendamentos de Hoje
                </h3>
            </div>
            <div class="card-body">
                @if (Model.TodayAppointmentsList.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Horário</th>
                                    <th>Cliente</th>
                                    <th>Profissional</th>
                                    <th>Serviço</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.TodayAppointmentsList)
                                {
                                    <tr>
                                        <td><span class="badge badge-primary">@appointment.StartTime.TimeOfDay.ToString(@"hh\:mm")</span></td>
                                        <td>@appointment.Customer?.Name</td>
                                        <td>@appointment.Professional?.Name</td>
                                        <td>@appointment.Service?.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhum agendamento para hoje.</p>
                }
            </div>
        </div>
    </div>

    <!-- Próximos Agendamentos -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-calendar-alt mr-1"></i>
                    Próximos Agendamentos
                </h3>
            </div>
            <div class="card-body">
                @if (Model.UpcomingAppointmentsList.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Data</th>
                                    <th>Horário</th>
                                    <th>Cliente</th>
                                    <th>Profissional</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var appointment in Model.UpcomingAppointmentsList)
                                {
                                    <tr>
                                        <td>@appointment.StartTime.Date.ToString("dd/MM/yyyy")</td>
                                        <td><span class="badge badge-info">@appointment.StartTime.TimeOfDay.ToString(@"hh\:mm")</span></td>
                                        <td>@appointment.Customer?.Name</td>
                                        <td>@appointment.Professional?.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhum agendamento futuro.</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Gráficos e Estatísticas -->
<div class="row">
    <!-- Gráfico de Agendamentos por Semana -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-line mr-1"></i>
                    Agendamentos por Semana
                </h3>
            </div>
            <div class="card-body">
                <canvas id="appointmentsChart" style="height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Gráfico de Status dos Agendamentos -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-pie mr-1"></i>
                    Status dos Agendamentos
                </h3>
            </div>
            <div class="card-body">
                <canvas id="appointmentsStatusChart" style="height: 300px;"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Gráfico de Agendamentos por Profissional -->
<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-bar mr-1"></i>
                    Agendamentos por Profissional
                </h3>
            </div>
            <div class="card-body">
                <canvas id="appointmentsByProfessionalChart" style="height: 300px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Gráfico de Agendamentos por Serviço -->
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-chart-area mr-1"></i>
                    Serviços Mais Procurados
                </h3>
            </div>
            <div class="card-body">
                <canvas id="servicesChart" style="height: 300px;"></canvas>
            </div>
        </div>
    </div>
</div>

<!-- Notificações -->
@if (ViewBag.Notifications != null && ((List<Sistema.Models.Admin.Notification>)ViewBag.Notifications).Any())
{
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-bell mr-1"></i>
                        Notificações
                    </h3>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        @foreach (var notification in (List<Sistema.Models.Admin.Notification>)ViewBag.Notifications)
                        {
                            <div class="time-label">
                                <span class="bg-primary">@notification.Time</span>
                            </div>
                            <div>
                                <i class="@notification.Icon bg-blue"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="fas fa-clock"></i> @notification.Time</span>
                                    <h3 class="timeline-header">
                                        <a href="@notification.Link">@notification.Message</a>
                                    </h3>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        $(document).ready(function() {
            // Gráfico de Agendamentos por Semana
            fetch('/Admin/GetAppointmentsChartData')
                .then(response => response.json())
                .then(data => {
                    const labels = data.map(d => d.Day);
                    const counts = data.map(d => d.Count);

                    const ctx = document.getElementById('appointmentsChart').getContext('2d');
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: labels,
                            datasets: [{
                                label: 'Agendamentos',
                                data: counts,
                                borderColor: 'rgb(75, 192, 192)',
                                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                                tension: 0.1
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            scales: {
                                y: {
                                    beginAtZero: true
                                }
                            }
                        }
                    });
                });

            // Gráfico de Status dos Agendamentos
            const statusCtx = document.getElementById('appointmentsStatusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Agendados', 'Realizados', 'Cancelados', 'Pendentes'],
                    datasets: [{
                        data: [@Model.TotalAppointments, 0, 0, @Model.PendingAppointments],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(255, 205, 86, 0.8)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });

            // Gráfico de Agendamentos por Profissional
            const professionalCtx = document.getElementById('appointmentsByProfessionalChart').getContext('2d');
            new Chart(professionalCtx, {
                type: 'bar',
                data: {
                    labels: ['Profissional 1', 'Profissional 2', 'Profissional 3'],
                    datasets: [{
                        label: 'Agendamentos',
                        data: [5, 3, 2],
                        backgroundColor: 'rgba(153, 102, 255, 0.8)',
                        borderColor: 'rgba(153, 102, 255, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Gráfico de Serviços Mais Procurados
            const servicesCtx = document.getElementById('servicesChart').getContext('2d');
            new Chart(servicesCtx, {
                type: 'pie',
                data: {
                    labels: ['Limpeza de Pele', 'Massagem', 'Tratamento Facial', 'Outros'],
                    datasets: [{
                        data: [40, 30, 20, 10],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 205, 86, 0.8)',
                            'rgba(75, 192, 192, 0.8)'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false
                }
            });
        });
    </script>
}
