@model IEnumerable<Sistema.Data.Entities.CashMovement>

@{
    ViewData["Title"] = "Cash Movements";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Cash Movements</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Cash Movements</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Cash Movements Management</h3>
                        <div class="card-tools">
                            <a asp-action="Create" asp-route-cashRegisterId="@ViewBag.CashRegisterId" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> New Movement
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Amount</th>
                                            <th>Description</th>
                                            <th>Reference</th>
                                            <th>Cash Register</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var movement in Model)
                                        {
                                            <tr>
                                                <td>@movement.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    <span class="badge @(movement.Type == "entry" ? "badge-success" : "badge-danger")">
                                                        @(movement.Type == "entry" ? "Entry" : "Exit")
                                                    </span>
                                                </td>
                                                <td class="@(movement.Type == "entry" ? "text-success" : "text-danger")">
                                                    @(movement.Type == "entry" ? "+" : "-") â‚¬@movement.Amount.ToString("N2")
                                                </td>
                                                <td>@movement.Description</td>
                                                <td>@(movement.Reference ?? "-")</td>
                                                <td>@movement.CashRegister.Date.ToString("dd/MM/yyyy")</td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@movement.Id" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@movement.Id" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@movement.Id" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                No cash movements found.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
