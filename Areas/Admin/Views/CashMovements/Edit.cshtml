@model Sistema.Data.Entities.CashMovement

@{
    ViewData["Title"] = "Edit Cash Movement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Edit Cash Movement</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Cash Movements</a></li>
                    <li class="breadcrumb-item active">Edit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Edit Cash Movement</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="CashRegisterId" class="control-label">Cash Register</label>
                                        <select asp-for="CashRegisterId" class="form-control" asp-items="ViewBag.CashRegisterId">
                                            <option value="">Select Cash Register</option>
                                        </select>
                                        <span asp-validation-for="CashRegisterId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Type" class="control-label">Movement Type</label>
                                        <select asp-for="Type" class="form-control">
                                            <option value="">Select Type</option>
                                            <option value="entry">Entry (Money In)</option>
                                            <option value="exit">Exit (Money Out)</option>
                                        </select>
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Amount" class="control-label">Amount (â‚¬)</label>
                                        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" />
                                        <span asp-validation-for="Amount" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Date" class="control-label">Date</label>
                                        <input asp-for="Date" class="form-control" type="datetime-local" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description" class="control-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter movement description..."></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Reference" class="control-label">Reference</label>
                                        <input asp-for="Reference" class="form-control" placeholder="Optional reference" />
                                        <span asp-validation-for="Reference" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="RelatedEntityType" class="control-label">Related Entity Type</label>
                                        <select asp-for="RelatedEntityType" class="form-control">
                                            <option value="">None</option>
                                            <option value="Receivable">Receivable</option>
                                            <option value="Payable">Payable</option>
                                            <option value="Sale">Sale</option>
                                            <option value="Expense">Expense</option>
                                        </select>
                                        <span asp-validation-for="RelatedEntityType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="RelatedEntityId" class="control-label">Related Entity ID</label>
                                <input asp-for="RelatedEntityId" class="form-control" type="number" placeholder="ID of related entity" />
                                <span asp-validation-for="RelatedEntityId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Update Movement
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
