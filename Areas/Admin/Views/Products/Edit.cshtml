@model Sistema.Models.Admin.ProductViewModel

@{
    ViewData["Title"] = "Editar os produtos";
}

<h1>Editar lista de produtos</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="PhotoPath" />

            <partial name="_Products" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-1"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-success">
                    <i class="fas fa-list me-1"></i> Back to List
                </a>
            </div>
        </form>
    </div>
    <div class="col-md-4">      
        <img src="@Url.Content(Model.ImageFullPath)" alt="Imagem do Produto" style="width:300px; height:450px; max-width: 100px; max-height: 100px;" />        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#photoInput').on('change', function (e) {
                const file = e.target.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = function (ev) {
                    $('#photoPreview').attr('src', ev.target.result).show();
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}
