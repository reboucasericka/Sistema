@{
    ViewData["Title"] = "Serviços por Profissional";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">
                <i class="fas fa-user-tie me-2"></i>@ViewData["Title"]
            </h1>
        </div>
        
    </div>
</div>

<section class="content">
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="m-0">
                <i class="fas fa-briefcase me-2 text-secondary"></i>Lista de Serviços por Profissional
            </h5>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Profissional</th>
                        <th>Serviço</th>
                        <th>Duração</th>
                        <th>Preço (€)</th>
                        <th>Comissão (€)</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProfessionalName</td>
                                <td>@item.ServiceName</td>
                                <td>@item.Duration</td>
                                <td>@item.Price.ToString("C")</td>
                                <td>@(item.Commission?.ToString("C") ?? "N/A")</td>
                                <td class="text-end">
                                    <a asp-area="Admin" asp-controller="AdminServiceProfessionals" asp-action="Edit" asp-route-serviceId="@item.Id" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">Nenhum serviço vinculado encontrado.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
