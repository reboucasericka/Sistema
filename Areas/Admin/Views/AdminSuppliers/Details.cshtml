@model Sistema.Data.Entities.Supplier

@{
    ViewData["Title"] = "Detalhes do Fornecedor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-eye me-2"></i>Detalhes do Fornecedor</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.SupplierId" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-building me-2"></i>@Model.Name
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-building me-1"></i>Nome da Empresa
                            </label>
                            <p class="form-control-plaintext">@Model.Name</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-phone me-1"></i>Contacto
                            </label>
                            <p class="form-control-plaintext">@Model.Phone</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope me-1"></i>Email
                            </label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">Não informado</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-id-card me-1"></i>NIF
                            </label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.TaxId))
                                {
                                    @Model.TaxId
                                }
                                else
                                {
                                    <span class="text-muted">Não informado</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-map-marker-alt me-1"></i>Morada
                    </label>
                    <p class="form-control-plaintext">
                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            @Model.Address
                        }
                        else
                        {
                            <span class="text-muted">Não informado</span>
                        }
                    </p>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-clock me-1"></i>Prazo de Entrega
                            </label>
                            <p class="form-control-plaintext">
                                @if (Model.DeliveryTime.HasValue)
                                {
                                    @Model.DeliveryTime.Value <text>dias</text>
                                }
                                else
                                {
                                    <span class="text-muted">Não informado</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-calendar me-1"></i>Data de Registo
                            </label>
                            <p class="form-control-plaintext">@Model.RegistrationDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Notes))
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="fas fa-sticky-note me-1"></i>Observações
                        </label>
                        <p class="form-control-plaintext">@Model.Notes</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-1"></i>Estatísticas
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-boxes fa-3x text-primary mb-2"></i>
                        <h4 class="text-primary">@Model.Products.Count</h4>
                        <p class="text-muted mb-0">Produtos Fornecidos</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-tools me-1"></i>Ações
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.SupplierId" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Editar Fornecedor
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.SupplierId" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Excluir Fornecedor
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
