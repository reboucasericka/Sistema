@model Sistema.Data.Entities.Supplier

@{
    ViewData["Title"] = "Editar Fornecedor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-edit me-2"></i>Editar Fornecedor</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações do Fornecedor
                </h5>
            </div>
            <form asp-action="Edit">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="SupplierId" />
                    <input type="hidden" asp-for="RegistrationDate" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label">
                                    <i class="fas fa-building me-1"></i>Nome da Empresa *
                                </label>
                                <input asp-for="Name" class="form-control" placeholder="Digite o nome da empresa" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label">
                                    <i class="fas fa-phone me-1"></i>Contacto *
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="+351 999 999 999" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email
                                </label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="contato@empresa.pt" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TaxId" class="form-label">
                                    <i class="fas fa-id-card me-1"></i>NIF
                                </label>
                                <input asp-for="TaxId" class="form-control" placeholder="999999999" maxlength="9" />
                                <span asp-validation-for="TaxId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">
                            <i class="fas fa-map-marker-alt me-1"></i>Morada
                        </label>
                        <textarea asp-for="Address" class="form-control" rows="3" placeholder="Digite a morada completa"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DeliveryTime" class="form-label">
                                    <i class="fas fa-clock me-1"></i>Prazo de Entrega (dias)
                                </label>
                                <input asp-for="DeliveryTime" type="number" class="form-control" placeholder="Ex: 7" min="0" />
                                <span asp-validation-for="DeliveryTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Data de Registo
                                </label>
                                <input type="text" class="form-control" value="@Model.RegistrationDate.ToString("dd/MM/yyyy")" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notes" class="form-label">
                            <i class="fas fa-sticky-note me-1"></i>Observações
                        </label>
                        <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Informações adicionais sobre o fornecedor"></textarea>
                        <span asp-validation-for="Notes" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Guardar Alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-1"></i>Informações
                </h6>
            </div>
            <div class="card-body">
                <p class="text-muted small">
                    <i class="fas fa-asterisk text-danger me-1"></i>Campos marcados com asterisco são obrigatórios.
                </p>
                <p class="text-muted small">
                    <i class="fas fa-calendar text-info me-1"></i>Data de registo: @Model.RegistrationDate.ToString("dd/MM/yyyy")
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Máscara para NIF (Portugal - 9 dígitos)
        $(document).ready(function() {
            $('#TaxId').mask('000000000');
        });
    </script>
}
