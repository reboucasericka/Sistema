@model Sistema.Data.Entities.Supplier

@{
    ViewData["Title"] = "Excluir Fornecedor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash me-2"></i>Excluir Fornecedor</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja excluir este fornecedor?
                </div>

                <h6 class="fw-bold mb-3">Informações do Fornecedor:</h6>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-building me-1"></i>Nome da Empresa
                            </label>
                            <p class="form-control-plaintext">@Model.Name</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-phone me-1"></i>Contacto
                            </label>
                            <p class="form-control-plaintext">@Model.Phone</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-envelope me-1"></i>Email
                            </label>
                            <p class="form-control-plaintext">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    @Model.Email
                                }
                                else
                                {
                                    <span class="text-muted">Não informado</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-calendar me-1"></i>Data de Registo
                            </label>
                            <p class="form-control-plaintext">@Model.RegistrationDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>

                @if (Model.Products.Any())
                {
                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Importante:</strong> Este fornecedor possui @Model.Products.Count <text>produtos associados</text>. 
                        A exclusão pode afetar esses produtos.
                    </div>
                }
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="SupplierId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Confirmar Exclusão
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-1"></i>Informações Importantes
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h6 class="alert-heading">
                        <i class="fas fa-exclamation-triangle me-1"></i>Atenção!
                    </h6>
                    <p class="mb-0">A exclusão de um fornecedor é uma ação irreversível.</p>
                </div>
                
                <h6 class="fw-bold">Consequências da exclusão:</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-danger me-1"></i>O fornecedor será removido permanentemente</li>
                    <li><i class="fas fa-check text-danger me-1"></i>Produtos associados podem ficar sem fornecedor</li>
                    <li><i class="fas fa-check text-danger me-1"></i>Histórico de compras será mantido</li>
                </ul>
            </div>
        </div>
    </div>
</div>
