@model Sistema.Data.Entities.Payable

@{
    ViewData["Title"] = "Editar Conta a Pagar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Editar Conta a Pagar</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Editar Conta a Pagar</h3>
                        <div class="card-tools">
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </div>
                    <form asp-action="Edit">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="PayableId" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Description" class="control-label">Description</label>
                                        <input asp-for="Description" class="form-control" />
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Type" class="control-label">Type</label>
                                        <input asp-for="Type" class="form-control" />
                                        <span asp-validation-for="Type" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Value" class="control-label">Value</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">â‚¬</span>
                                            </div>
                                            <input asp-for="Value" class="form-control" type="number" step="0.01" />
                                        </div>
                                        <span asp-validation-for="Value" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="DueDate" class="control-label">Due Date</label>
                                        <input asp-for="DueDate" class="form-control" type="date" />
                                        <span asp-validation-for="DueDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="LaunchDate" class="control-label">Launch Date</label>
                                        <input asp-for="LaunchDate" class="form-control" type="date" />
                                        <span asp-validation-for="LaunchDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PaymentDate" class="control-label">Payment Date</label>
                                        <input asp-for="PaymentDate" class="form-control" type="date" />
                                        <span asp-validation-for="PaymentDate" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PersonId" class="control-label">ID da Pessoa</label>
                                        <input asp-for="PersonId" class="form-control" type="number" />
                                        <span asp-validation-for="PersonId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="PaymentMethodId" class="control-label">Forma de Pagamento ID</label>
                                        <input asp-for="PaymentMethodId" class="form-control" type="number" />
                                        <span asp-validation-for="PaymentMethodId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Installment" class="control-label">Installment</label>
                                        <input asp-for="Installment" class="form-control" type="number" min="1" />
                                        <span asp-validation-for="Installment" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="TotalInstallments" class="control-label">Total Installments</label>
                                        <input asp-for="TotalInstallments" class="form-control" type="number" min="1" />
                                        <span asp-validation-for="TotalInstallments" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="form-check">
                                            <input asp-for="IsPaid" class="form-check-input" type="checkbox" />
                                            <label asp-for="IsPaid" class="form-check-label">Paid</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="form-group">
                                <input type="submit" value="Salvar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
