@model IEnumerable<Sistema.Data.Entities.Payable>

@{
    ViewData["Title"] = "Pagamentos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <h1><i class="fas fa-credit-card me-2"></i>@ViewData["Title"]</h1>
    <p class="text-muted">Gerencie os pagamentos e contas a pagar</p>
</div>
        <!-- Filtros -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Filtros</h3>
                    </div>
                    <div class="card-body">
                        <form method="get" class="row">
                            <div class="col-md-3">
                                <label for="status">Status:</label>
                                <select name="status" id="status" class="form-control">
                                    <option value="">Todos</option>
                                    <option value="Pending" selected="@(ViewBag.Status == "Pending")">Pendente</option>
                                    <option value="Paid" selected="@(ViewBag.Status == "Paid")">Pago</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label for="type">Tipo:</label>
                                <select name="type" id="type" class="form-control">
                                    <option value="">Todos</option>
                                    <option value="Expense" selected="@(ViewBag.Type == "Expense")">Despesa</option>
                                    <option value="Commission" selected="@(ViewBag.Type == "Commission")">Comissão</option>
                                    <option value="Supplier" selected="@(ViewBag.Type == "Supplier")">Fornecedor</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label for="startDate">Data Início:</label>
                                <input type="date" name="startDate" id="startDate" class="form-control" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-2">
                                <label for="endDate">Data Fim:</label>
                                <input type="date" name="endDate" id="endDate" class="form-control" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-2">
                                <label>&nbsp;</label>
                                <button type="submit" class="btn btn-primary form-control">
                                    <i class="fas fa-search"></i> Filtrar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resumo -->
        <div class="row mb-3">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3 id="totalPending">€ 0,00</h3>
                        <p>Pendentes</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3 id="totalPaid">€ 0,00</h3>
                        <p>Pagos</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3 id="totalExpenses">€ 0,00</h3>
                        <p>Despesas</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3 id="totalCommissions">€ 0,00</h3>
                        <p>Comissões</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-percentage"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabela -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Pagamentos</h3>
                        <div class="card-tools">
                            <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Novo Pagamento
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="payablesTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Descrição</th>
                                        <th>Valor</th>
                                        <th>Vencimento</th>
                                        <th>Tipo</th>
                                        <th>Profissional/Fornecedor</th>
                                        <th>Status</th>
                                        <th>Data Pagamento</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payable in Model)
                                    {
                                        <tr>
                                            <td>@payable.Description</td>
                                            <td>€@payable.Amount.ToString("N2")</td>
                                            <td>@payable.DueDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge badge-info">@payable.Type</span>
                                            </td>
                                            <td>
                                                @if (payable.Professional != null)
                                                {
                                                    @payable.Professional.Name
                                                }
                                                else if (payable.Supplier != null)
                                                {
                                                    @payable.Supplier.Name
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (payable.Status == "Paid")
                                                {
                                                    <span class="badge badge-success">Pago</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Pendente</span>
                                                }
                                            </td>
                                            <td>
                                                @if (payable.PaymentDate.HasValue)
                                                {
                                                    @payable.PaymentDate.Value.ToString("dd/MM/yyyy")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("Details", new { id = payable.PayableId })" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = payable.PayableId })" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (payable.Status == "Pending")
                                                    {
                                                        <button type="button" class="btn btn-success btn-sm" onclick="markAsPaid(@payable.PayableId)">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                    <a href="@Url.Action("Delete", new { id = payable.PayableId })" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#payablesTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                }
            });

            // Carregar resumo
            loadSummary();
        });

        function loadSummary() {
            $.get('@Url.Action("Summary")', function(data) {
                $('#totalPending').text('€ ' + data.totalPending.toFixed(2).replace('.', ','));
                $('#totalPaid').text('€ ' + data.totalPaid.toFixed(2).replace('.', ','));
                $('#totalExpenses').text('€ ' + data.totalExpenses.toFixed(2).replace('.', ','));
                $('#totalCommissions').text('€ ' + data.totalCommissions.toFixed(2).replace('.', ','));
            });
        }

        function markAsPaid(id) {
            Swal.fire({
                title: 'Confirmar Pagamento',
                text: 'Deseja marcar este pagamento como pago?',
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Sim, marcar como pago!',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("MarkAsPaid")', { id: id }, function(response) {
                        if (response.success) {
                            Swal.fire('Sucesso!', 'Pagamento marcado como pago!', 'success').then(() => {
                                location.reload();
                            });
                        } else {
                            Swal.fire('Erro!', 'Erro ao marcar pagamento como pago.', 'error');
                        }
                    });
                }
            });
        }
    </script>
}