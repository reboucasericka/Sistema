@model IEnumerable<Sistema.Data.Entities.Payable>

@{
    ViewData["Title"] = "Contas a Pagar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Contas a Pagar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Contas a Pagar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Contas a Pagar</h3>
                        <div class="card-tools">
                            <a asp-action="Create" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus"></i> Nova Conta a Pagar
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        }

                        <div class="table-responsive">
                            <table class="table table-bordered table-striped" id="payablesTable">
                                <thead>
                                    <tr>
                                        <th>Descrição</th>
                                        <th>Type</th>
                                        <th>Value</th>
                                        <th>Data Lançamento</th>
                                        <th>Data Vencimento</th>
                                        <th>Data Pagamento</th>
                                        <th>Status</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Description</td>
                                            <td>@item.Type</td>
                                            <td>€@item.Value.ToString("N2")</td>
                                            <td>@item.LaunchDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.DueDate.ToString("dd/MM/yyyy")</td>
                                            <td>@(item.PaymentDate?.ToString("dd/MM/yyyy") ?? "-")</td>
                                            <td>
                                                @if (item.IsPaid)
                                                {
                                                    <span class="badge badge-success">Paid</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Pendente</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.PayableId" class="btn btn-info btn-sm">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.PayableId" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    @if (!item.IsPaid)
                                                    {
                                                        <form asp-action="MarkAsPaid" method="post" style="display: inline;">
                                                            <input type="hidden" name="id" value="@item.PayableId" />
                                                            <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Mark this payable as paid?')">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@item.PayableId" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#payablesTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#payablesTable_wrapper .col-md-6:eq(0)');
        });
    </script>
}
