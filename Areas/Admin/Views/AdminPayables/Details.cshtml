@model Sistema.Data.Entities.Payable

@{
    ViewData["Title"] = "Detalhes da Conta a Pagar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Detalhes da Conta a Pagar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Contas a Pagar</a></li>
                    <li class="breadcrumb-item active">Detalhes</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Informações da Conta a Pagar</h3>
                        <div class="card-tools">
                            <a asp-action="Edit" asp-route-id="@Model.PayableId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">ID:</dt>
                            <dd class="col-sm-9">@Model.PayableId</dd>

                            <dt class="col-sm-3">Descrição:</dt>
                            <dd class="col-sm-9">@Model.Description</dd>

                            <dt class="col-sm-3">Type:</dt>
                            <dd class="col-sm-9">@Model.Type</dd>

                            <dt class="col-sm-3">Value:</dt>
                            <dd class="col-sm-9">
                                <span class="badge badge-primary" style="font-size: 1.1em;">
                                    €@Model.Value.ToString("N2")
                                </span>
                            </dd>

                            <dt class="col-sm-3">Data de Lançamento:</dt>
                            <dd class="col-sm-9">@Model.LaunchDate.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-3">Data de Vencimento:</dt>
                            <dd class="col-sm-9">@Model.DueDate.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-3">Data de Pagamento:</dt>
                            <dd class="col-sm-9">
                                @if (Model.PaymentDate.HasValue)
                                {
                                    @Model.PaymentDate.Value.ToString("dd/MM/yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">Não pago</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Status:</dt>
                            <dd class="col-sm-9">
                                @if (Model.IsPaid)
                                {
                                    <span class="badge badge-success badge-lg">Paid</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning badge-lg">Pendente</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Usuário que Lançou:</dt>
                            <dd class="col-sm-9">@(Model.LaunchUser != null ? $"{Model.LaunchUser.FirstName} {Model.LaunchUser.LastName}" : "N/A")</dd>

                            @if (Model.ClearUser != null)
                            {
                                <dt class="col-sm-3">User who Paid:</dt>
                                <dd class="col-sm-9">@($"{Model.ClearUser.FirstName} {Model.ClearUser.LastName}")</dd>
                            }

                            @if (Model.PersonId.HasValue)
                            {
                                <dt class="col-sm-3">ID da Pessoa:</dt>
                                <dd class="col-sm-9">@Model.PersonId</dd>
                            }

                            @if (Model.PaymentMethodId.HasValue)
                            {
                                <dt class="col-sm-3">Forma de Pagamento ID:</dt>
                                <dd class="col-sm-9">@Model.PaymentMethodId</dd>
                            }

                            <dt class="col-sm-3">Parcela:</dt>
                            <dd class="col-sm-9">@Model.Installment of @Model.TotalInstallments</dd>

                            @if (!string.IsNullOrEmpty(Model.Photo))
                            {
                                <dt class="col-sm-3">Photo:</dt>
                                <dd class="col-sm-9">
                                    <img src="@Model.Photo" alt="Photo" class="img-thumbnail" style="max-width: 200px;" />
                                </dd>
                            }
                        </dl>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model.PayableId" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            @if (!Model.IsPaid)
                            {
                                <form asp-action="MarkAsPaid" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@Model.PayableId" />
                                    <button type="submit" class="btn btn-success" onclick="return confirm('Mark this payable as paid?')">
                                        <i class="fas fa-check"></i> Mark as Paid
                                    </button>
                                </form>
                            }
                            <a asp-action="Delete" asp-route-id="@Model.PayableId" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Excluir
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
