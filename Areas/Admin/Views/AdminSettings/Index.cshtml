@model IEnumerable<Sistema.Data.Entities.Setting>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Configurações do Sistema";
}

<div class="container-fluid px-4">
    <!-- Cabeçalho da página -->
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-cog me-2"></i>@ViewData["Title"]
            </h5>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus me-1"></i>Nova Configuração
            </a>
        </div>
        <div class="card-body">
            <p class="text-muted mb-0">Gerencie as configurações da clínica e do sistema</p>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Lista de Configurações -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Configurações da Clínica
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle" id="dataTable">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th>
                                    <i class="fas fa-building me-1"></i>Nome da Clínica
                                </th>
                                <th>
                                    <i class="fas fa-envelope me-1"></i>Email
                                </th>
                                <th>
                                    <i class="fas fa-phone me-1"></i>Telefone
                                </th>
                                <th>
                                    <i class="fas fa-map-marker-alt me-1"></i>Endereço
                                </th>
                                <th>
                                    <i class="fas fa-clock me-1"></i>Horário
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-cogs me-1"></i>Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var setting in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@setting.ClinicName</div>
                                    </td>
                                    <td>
                                        <small class="text-muted">@setting.Email</small>
                                    </td>
                                    <td>
                                        <span class="text-primary">@setting.LandlinePhone</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(setting.Address) && setting.Address.Length > 30)
                                        {
                                            <div class="text-truncate" style="max-width: 200px;" title="@setting.Address">
                                                @setting.Address.Substring(0, 30)...
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-truncate" style="max-width: 200px;" title="@setting.Address">
                                                @setting.Address
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@setting.BusinessHours</small>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1 justify-content-center">
                                            <a asp-action="Details" asp-route-id="@setting.SettingId" 
                                               class="btn btn-info btn-sm" title="Visualizar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@setting.SettingId" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@setting.SettingId" 
                                               class="btn btn-danger btn-sm" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-cog fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhuma configuração encontrada</h5>
                    <p class="text-muted">Clique em "Nova Configuração" para adicionar a primeira configuração.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Adicionar Primeira Configuração
                    </a>
                </div>
            }
        </div>
    </div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                "pageLength": 25,
                "order": [[0, "asc"]],
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false
            });
        });
    </script>
}
</div>
