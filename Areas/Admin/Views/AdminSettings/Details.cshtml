@model Sistema.Data.Entities.Setting
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Detalhes da Configuração";
}

<div class="container-fluid px-4">
    <!-- Cabeçalho da página -->
    <div class="card shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-eye me-2"></i>@ViewData["Title"]
            </h5>
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left me-1"></i>Voltar
            </a>
        </div>
        <div class="card-body">
            <p class="text-muted mb-0">Visualize os detalhes da configuração da clínica</p>
        </div>
    </div>

    <!-- Detalhes da Configuração -->
    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clinic-medical me-2"></i>Informações da Clínica
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Nome da Clínica</label>
                            <p class="form-control-plaintext">@Model.ClinicName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Telefone Fixo</label>
                            <p class="form-control-plaintext">@(Model.LandlinePhone ?? "Não informado")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">WhatsApp</label>
                            <p class="form-control-plaintext">@(Model.WhatsAppPhone ?? "Não informado")</p>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">Endereço</label>
                            <p class="form-control-plaintext">@(Model.Address ?? "Não informado")</p>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Horário de Funcionamento</label>
                            <p class="form-control-plaintext">@Model.BusinessHours</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Duração Padrão do Serviço</label>
                            <p class="form-control-plaintext">@Model.DefaultServiceDuration minutos</p>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Comissão Padrão Extensão</label>
                            <p class="form-control-plaintext">@Model.DefaultExtensionCommission%</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Comissão Padrão Design</label>
                            <p class="form-control-plaintext">@Model.DefaultDesignCommission%</p>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Instagram</label>
                            <p class="form-control-plaintext">@(Model.Instagram ?? "Não informado")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Tipo de Relatório</label>
                            <p class="form-control-plaintext">@(Model.ReportType ?? "Não definido")</p>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">Pasta de Imagens</label>
                            <p class="form-control-plaintext">@Model.ImagesFolder</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Informações
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">ID da Configuração</label>
                        <p class="form-control-plaintext">@Model.SettingId</p>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Tipo de Comissão</label>
                        <p class="form-control-plaintext">@Model.CommissionType</p>
                    </div>

                    <hr>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.SettingId" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i>Editar Configuração
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.SettingId" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Excluir Configuração
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
