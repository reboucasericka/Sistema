@model Sistema.Data.Entities.StockEntry

@{
    ViewData["Title"] = "Entrada de Estoque";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Entrada de Estoque</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Registrar Entrada de Estoque</h3>
                    </div>
                    <form asp-action="Entry" method="post">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="ProductId" class="control-label">Produto</label>
                                        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.ProductId" id="productSelect">
                                            <option value="">Selecione um produto</option>
                                        </select>
                                        <span asp-validation-for="ProductId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Quantity" class="control-label">Quantidade</label>
                                        <input asp-for="Quantity" type="number" min="1" class="form-control" placeholder="Quantidade a adicionar" />
                                        <span asp-validation-for="Quantity" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Reason" class="control-label">Motivo</label>
                                        <select asp-for="Reason" class="form-control">
                                            <option value="">Selecione um motivo</option>
                                            <option value="Compra">Compra</option>
                                            <option value="Devolução">Devolução</option>
                                            <option value="Ajuste">Ajuste</option>
                                            <option value="Transferência">Transferência</option>
                                            <option value="Outros">Outros</option>
                                        </select>
                                        <span asp-validation-for="Reason" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Date" class="control-label">Data</label>
                                        <input asp-for="Date" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Reason" class="control-label">Motivo</label>
                                        <textarea asp-for="Reason" class="form-control" rows="3" placeholder="Motivo da entrada de estoque..."></textarea>
                                        <span asp-validation-for="Reason" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Informações do produto selecionado -->
                            <div id="productInfo" class="row" style="display: none;">
                                <div class="col-12">
                                    <div class="card card-outline card-info">
                                        <div class="card-header">
                                            <h3 class="card-title">Informações do Produto</h3>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-3">
                                                    <strong>Estoque Atual:</strong>
                                                    <span id="currentStock">-</span>
                                                </div>
                                                <div class="col-md-3">
                                                    <strong>Estoque Mínimo:</strong>
                                                    <span id="minimumStock">-</span>
                                                </div>
                                                <div class="col-md-3">
                                                    <strong>Preço de Compra:</strong>
                                                    <span id="purchasePrice">-</span>
                                                </div>
                                                <div class="col-md-3">
                                                    <strong>Preço de Venda:</strong>
                                                    <span id="salePrice">-</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus"></i> Registrar Entrada
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Carregar informações do produto quando selecionado
            $('#productSelect').change(function() {
                var productId = $(this).val();
                if (productId) {
                    loadProductInfo(productId);
                } else {
                    $('#productInfo').hide();
                }
            });
            
            function loadProductInfo(productId) {
                // Aqui você pode implementar uma chamada AJAX para carregar as informações do produto
                // Por enquanto, vamos simular com dados estáticos
                $('#currentStock').text('Carregando...');
                $('#minimumStock').text('Carregando...');
                $('#purchasePrice').text('Carregando...');
                $('#salePrice').text('Carregando...');
                $('#productInfo').show();
            }
        });
    </script>
}

