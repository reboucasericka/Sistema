@model IEnumerable<Sistema.Data.Entities.Product>

@{
    ViewData["Title"] = "Controle de Estoque";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Controle de Estoque</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Estoque</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Produtos em Estoque</h3>
                        <div class="card-tools">
                            <a href="@Url.Action("Entry")" class="btn btn-success btn-sm">
                                <i class="fas fa-plus"></i> Entrada
                            </a>
                            <a href="@Url.Action("Output")" class="btn btn-warning btn-sm">
                                <i class="fas fa-minus"></i> Saída
                            </a>
                            <a href="@Url.Action("Adjust")" class="btn btn-info btn-sm">
                                <i class="fas fa-edit"></i> Ajuste
                            </a>
                            <a href="@Url.Action("Movements")" class="btn btn-secondary btn-sm">
                                <i class="fas fa-history"></i> Movimentações
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="stockTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        <th>Categoria</th>
                                        <th>Estoque Atual</th>
                                        <th>Estoque Mínimo</th>
                                        <th>Status</th>
                                        <th>Preço de Compra</th>
                                        <th>Preço de Venda</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr class="@(product.Stock <= product.MinimumStockLevel ? "table-warning" : "")">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (product.ImageId != Guid.Empty)
                                                    {
                                                        <img src="@product.ImageFullPath" alt="@product.Name" class="img-circle img-size-32 mr-2">
                                                    }
                                                    else
                                                    {
                                                        <div class="img-circle img-size-32 bg-secondary d-flex align-items-center justify-content-center mr-2">
                                                            <i class="fas fa-box text-white"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <strong>@product.Name</strong>
                                                        @if (!string.IsNullOrEmpty(product.Description))
                                                        {
                                                            <br><small class="text-muted">@product.Description</small>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@product.ProductCategory?.Name</td>
                                            <td>
                                                <span class="badge badge-@(product.Stock > product.MinimumStockLevel ? "success" : "warning")">
                                                    @product.Stock
                                                </span>
                                            </td>
                                            <td>@product.MinimumStockLevel</td>
                                            <td>
                                                @if (product.Stock <= product.MinimumStockLevel)
                                                {
                                                    <span class="badge badge-warning">Estoque Baixo</span>
                                                }
                                                else if (product.Stock == 0)
                                                {
                                                    <span class="badge badge-danger">Sem Estoque</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-success">Normal</span>
                                                }
                                            </td>
                                            <td>@product.PurchasePrice.ToString("C")</td>
                                            <td>@product.SalePrice.ToString("C")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Entry", new { productId = product.ProductId })" 
                                                       class="btn btn-success btn-sm" title="Entrada">
                                                        <i class="fas fa-plus"></i>
                                                    </a>
                                                    <a href="@Url.Action("Output", new { productId = product.ProductId })" 
                                                       class="btn btn-warning btn-sm" title="Saída">
                                                        <i class="fas fa-minus"></i>
                                                    </a>
                                                    <a href="@Url.Action("Adjust", new { productId = product.ProductId })" 
                                                       class="btn btn-info btn-sm" title="Ajuste">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#stockTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                "order": [[2, "asc"]] // Ordenar por estoque
            });
        });
    </script>
}

