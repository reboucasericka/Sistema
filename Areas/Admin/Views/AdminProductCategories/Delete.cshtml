@model Sistema.Data.Entities.ProductCategory

@{
    ViewData["Title"] = "Excluir Categoria";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash me-2"></i>Excluir Categoria</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja excluir esta categoria?
                </div>

                <h6 class="fw-bold mb-3">Informações da Categoria:</h6>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-tag me-1"></i>Nome da Categoria
                    </label>
                    <p class="form-control-plaintext">@Model.Name</p>
                </div>

                @if (Model.Products.Any())
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Erro!</strong> Esta categoria possui @Model.Products.Count produto(s) associado(s). 
                        Não é possível excluir uma categoria que possui produtos.
                    </div>
                }
            </div>
            <div class="card-footer">
                @if (!Model.Products.Any())
                {
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProductCategoryId" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i>Confirmar Exclusão
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times me-1"></i>Cancelar
                        </a>
                    </form>
                }
                else
                {
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
                    </a>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-1"></i>Informações Importantes
                </h6>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <h6 class="alert-heading">
                        <i class="fas fa-exclamation-triangle me-1"></i>Atenção!
                    </h6>
                    <p class="mb-0">A exclusão de uma categoria é uma ação irreversível.</p>
                </div>
                
                <h6 class="fw-bold">Regras para exclusão:</h6>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-success me-1"></i>Categoria sem produtos pode ser excluída</li>
                    <li><i class="fas fa-times text-danger me-1"></i>Categoria com produtos não pode ser excluída</li>
                    <li><i class="fas fa-info text-info me-1"></i>Primeiro mova os produtos para outra categoria</li>
                </ul>
            </div>
        </div>
    </div>
</div>
