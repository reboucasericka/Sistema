@model Sistema.Data.Entities.ProductCategory

@{
    ViewData["Title"] = "Editar Categoria";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-edit me-2"></i>Editar Categoria</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
    </a>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações da Categoria
                </h5>
            </div>
            <form asp-action="Edit">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <input type="hidden" asp-for="ProductCategoryId" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="fas fa-tag me-1"></i>Nome da Categoria *
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Digite o nome da categoria" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i>Salvar Alterações
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-info-circle me-1"></i>Informações
                </h6>
            </div>
            <div class="card-body">
                <p class="text-muted small">
                    <i class="fas fa-asterisk text-danger me-1"></i>Campos marcados com asterisco são obrigatórios.
                </p>
                <p class="text-muted small">
                    <i class="fas fa-lightbulb text-warning me-1"></i>O nome da categoria deve ser único no sistema.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
