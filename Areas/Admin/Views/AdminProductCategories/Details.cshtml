@model Sistema.Data.Entities.ProductCategory

@{
    ViewData["Title"] = "Detalhes da Categoria";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <h1><i class="fas fa-eye me-2"></i>@ViewData["Title"]</h1>
    <p class="text-muted">Visualize as informações da categoria de produto</p>
</div>

<div class="row mb-3">
    <div class="col-12">
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.ProductCategoryId" class="btn btn-warning">
                <i class="fas fa-edit me-2"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar à Lista
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tags me-2"></i>@Model.Name
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">
                        <i class="fas fa-tag me-1"></i>Nome da Categoria
                    </label>
                    <p class="form-control-plaintext">@Model.Name</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-chart-bar me-1"></i>Estatísticas
                </h6>
            </div>
            <div class="card-body">
                <div class="text-center">
                    <div class="mb-3">
                        <i class="fas fa-boxes fa-3x text-primary mb-2"></i>
                        <h4 class="text-primary">@Model.Products.Count</h4>
                        <p class="text-muted mb-0">Produtos nesta Categoria</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="fas fa-tools me-1"></i>Ações
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.ProductCategoryId" class="btn btn-warning">
                        <i class="fas fa-edit me-1"></i>Editar Categoria
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.ProductCategoryId" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Excluir Categoria
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Voltar à Lista
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
