@model IEnumerable<Sistema.Data.Entities.PaymentMethod>

@{
    ViewData["Title"] = "Métodos de Pagamento";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-credit-card mr-2"></i>
                        Métodos de Pagamento
                    </h3>
                    <div class="card-tools">
                        <a asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Novo Método
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Descrição</th>
                                        <th>Can Pay</th>
                                        <th>Can Receive</th>
                                        <th>Active</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var method in Model)
                                    {
                                        <tr>
                                            <td>@method.Description</td>
                                            <td>
                                                @if (method.Payables.Any())
                                                {
                                                    <span class="badge badge-success">Sim</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Não</span>
                                                }
                                            </td>
                                            <td>
                                                @if (method.Receivables.Any())
                                                {
                                                    <span class="badge badge-success">Sim</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">Não</span>
                                                }
                                            </td>
                                            <td>
                                                @if (method.IsActive)
                                                {
                                                    <span class="badge badge-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Inativo</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@method.PaymentMethodId" 
                                                       class="btn btn-info btn-sm" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@method.PaymentMethodId" 
                                                       class="btn btn-warning btn-sm" title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@method.PaymentMethodId" 
                                                       class="btn btn-danger btn-sm" title="Excluir"
                                                       onclick="return confirm('Tem certeza que deseja excluir este método de pagamento?')">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhum método de pagamento encontrado</h5>
                            <p class="text-muted">Clique em "Novo Método" para adicionar o primeiro método de pagamento.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                "pageLength": 25,
                "responsive": true
            });
        });
    </script>
}
