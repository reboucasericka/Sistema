@model IEnumerable<Sistema.Data.Entities.Appointment>

@{
    ViewData["Title"] = "Relatório de Agendamentos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Relatório de Agendamentos</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Relatórios</a></li>
                    <li class="breadcrumb-item active">Agendamentos</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Filtros -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Filtros</h3>
                    </div>
                    <div class="card-body">
                        <form method="get" class="form-inline">
                            <div class="form-group mr-3">
                                <label for="startDate" class="mr-2">Data Inicial:</label>
                                <input type="date" class="form-control" id="startDate" name="startDate" value="@ViewBag.StartDate.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="form-group mr-3">
                                <label for="endDate" class="mr-2">Data Final:</label>
                                <input type="date" class="form-control" id="endDate" name="endDate" value="@ViewBag.EndDate.ToString("yyyy-MM-dd")">
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Filtrar
                            </button>
                            <a href="@Url.Action("Export", new { reportType = "appointments", startDate = ViewBag.StartDate, endDate = ViewBag.EndDate })" 
                               class="btn btn-success ml-2">
                                <i class="fas fa-file-excel"></i> Exportar Excel
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Estatísticas -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-info">
                    <div class="inner">
                        <h3>@ViewBag.TotalAppointments</h3>
                        <p>Total de Agendamentos</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>@ViewBag.ConfirmedAppointments</h3>
                        <p>Confirmados</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-check"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>@ViewBag.PendingAppointments</h3>
                        <p>Pendentes</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-clock"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>@ViewBag.CancelledAppointments</h3>
                        <p>Cancelados</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-times"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráficos -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Agendamentos por Dia</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="appointmentsByDayChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Agendamentos por Profissional</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="appointmentsByProfessionalChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabela de Agendamentos -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Detalhes dos Agendamentos</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="appointmentsTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Horário</th>
                                        <th>Cliente</th>
                                        <th>Profissional</th>
                                        <th>Serviço</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in Model)
                                    {
                                        <tr>
                                            <td>@appointment.Date.ToString("dd/MM/yyyy")</td>
                                            <td>@appointment.Time.ToString(@"hh\:mm")</td>
                                            <td>@appointment.Client.Name</td>
                                            <td>@appointment.Professional.Name</td>
                                            <td>@appointment.Service.Name</td>
                                            <td>
                                                @switch (appointment.Status)
                                                {
                                                    case "scheduled":
                                                        <span class="badge badge-warning">Agendado</span>
                                                        break;
                                                    case "completed":
                                                        <span class="badge badge-success">Realizado</span>
                                                        break;
                                                    case "canceled":
                                                        <span class="badge badge-danger">Cancelado</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">@appointment.Status</span>
                                                        break;
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        $(document).ready(function() {
            // Configurar DataTable
            $('#appointmentsTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                "order": [[0, "desc"]]
            });

            // Gráfico de agendamentos por dia
            var appointmentsByDayData = @Html.Raw(Json.Serialize(ViewBag.AppointmentsByDay));
            var appointmentsByDayLabels = appointmentsByDayData.map(item => item.date);
            var appointmentsByDayValues = appointmentsByDayData.map(item => item.count);

            var appointmentsByDayCtx = document.getElementById('appointmentsByDayChart').getContext('2d');
            new Chart(appointmentsByDayCtx, {
                type: 'bar',
                data: {
                    labels: appointmentsByDayLabels,
                    datasets: [{
                        label: 'Agendamentos',
                        data: appointmentsByDayValues,
                        backgroundColor: 'rgba(54, 162, 235, 0.8)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            // Gráfico de agendamentos por profissional
            var appointmentsByProfessionalData = @Html.Raw(Json.Serialize(ViewBag.AppointmentsByProfessional));
            var appointmentsByProfessionalLabels = appointmentsByProfessionalData.map(item => item.professional);
            var appointmentsByProfessionalValues = appointmentsByProfessionalData.map(item => item.count);

            var appointmentsByProfessionalCtx = document.getElementById('appointmentsByProfessionalChart').getContext('2d');
            new Chart(appointmentsByProfessionalCtx, {
                type: 'doughnut',
                data: {
                    labels: appointmentsByProfessionalLabels,
                    datasets: [{
                        data: appointmentsByProfessionalValues,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.8)',
                            'rgba(54, 162, 235, 0.8)',
                            'rgba(255, 205, 86, 0.8)',
                            'rgba(75, 192, 192, 0.8)',
                            'rgba(153, 102, 255, 0.8)'
                        ]
                    }]
                },
                options: {
                    responsive: true
                }
            });
        });
    </script>
}

