@model Sistema.Data.Entities.Customer

@{
    ViewData["Title"] = "Client Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Client Details</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Client Information</h3>
                        <div class="card-tools">
                            <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Name:</dt>
                            <dd class="col-sm-9">@Model.Name</dd>

                            <dt class="col-sm-3">Email:</dt>
                            <dd class="col-sm-9">@Model.Email</dd>

                            <dt class="col-sm-3">Phone:</dt>
                            <dd class="col-sm-9">@Model.Phone</dd>

                            <dt class="col-sm-3">Address:</dt>
                            <dd class="col-sm-9">@Model.Address</dd>

                            <dt class="col-sm-3">Birth Date:</dt>
                            <dd class="col-sm-9">@(Model.BirthDate?.ToString("dd/MM/yyyy"))</dd>

                            <dt class="col-sm-3">Status:</dt>
                            <dd class="col-sm-9">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Inactive</span>
                                }
                            </dd>

                            <dt class="col-sm-3">Registration Date:</dt>
                            <dd class="col-sm-9">@Model.RegistrationDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <dt class="col-sm-3">Notes:</dt>
                                <dd class="col-sm-9">@Model.Notes</dd>
                            }
                        </dl>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Edit" asp-route-id="@Model.CustomerId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Client
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.CustomerId" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Client
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
