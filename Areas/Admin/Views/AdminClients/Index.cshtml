@model IEnumerable<Sistema.Data.Entities.Customer>

@{
    ViewData["Title"] = "Gestão de Clientes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0"><i class="fas fa-users me-2"></i>@ViewData["Title"]</h1>
        </div>
       
    </div>
</div>

<!-- Main Content -->
<section class="content">

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Cliente
        </a>
    </div>
</div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Estatísticas -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-primary">
                <div class="inner">
                    <h3>@Model.Count()</h3>
                    <p>Total de Clientes</p>
                </div>
                <div class="icon">
                    <i class="fas fa-users"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.Count(c => c.IsActive)</h3>
                    <p>Clientes Ativos</p>
                </div>
                <div class="icon">
                    <i class="fas fa-user-check"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.Count(c => !c.IsActive)</h3>
                    <p>Clientes Inativos</p>
                </div>
                <div class="icon">
                    <i class="fas fa-user-times"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.Count(c => c.BirthDate.HasValue)</h3>
                    <p>Com Data Nascimento</p>
                </div>
                <div class="icon">
                    <i class="fas fa-birthday-cake"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Clientes -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Lista de Clientes
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th>
                                    <i class="fas fa-user me-1"></i>Nome
                                </th>
                                <th>
                                    <i class="fas fa-envelope me-1"></i>Email
                                </th>
                                <th>
                                    <i class="fas fa-phone me-1"></i>Telefone
                                </th>
                                <th>
                                    <i class="fas fa-map-marker-alt me-1"></i>Endereço
                                </th>
                                <th>
                                    <i class="fas fa-birthday-cake me-1"></i>Data Nascimento
                                </th>
                                <th>
                                    <i class="fas fa-toggle-on me-1"></i>Status
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-cogs me-1"></i>Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold">@item.Name</div>
                                    </td>
                                    <td>
                                        <small class="text-muted">@item.Email</small>
                                    </td>
                                    <td>
                                        <span class="text-primary">@item.Phone</span>
                                    </td>
                                    <td>
                                        <div class="text-truncate" style="max-width: 200px;" title="@item.Address">
                                            @item.Address
                                        </div>
                                    </td>
                                    <td>
                                        @if (item.BirthDate.HasValue)
                                        {
                                            <span class="badge bg-info">@item.BirthDate.Value.ToString("dd/MM/yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Ativo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Inativo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1 justify-content-center">
                                            <a asp-action="Details" asp-route-id="@item.CustomerId" 
                                               class="btn btn-info btn-sm" title="Visualizar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.CustomerId" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.CustomerId" 
                                               class="btn btn-danger btn-sm" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum cliente encontrado</h5>
                    <p class="text-muted">Comece adicionando seu primeiro cliente.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Adicionar Primeiro Cliente
                    </a>
                </div>
            }
        </div>
    </div>
</section>
