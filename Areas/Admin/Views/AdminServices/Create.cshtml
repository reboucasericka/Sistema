@model Sistema.Models.Admin.AdminServiceCreateViewModel

@{
    ViewData["Title"] = "Novo Serviço";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <h1><i class="fas fa-concierge-bell me-2"></i>@ViewData["Title"]</h1>
    <p class="text-muted">Adicione um novo serviço ao sistema</p>
</div>

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-concierge-bell"></i> Informações do Serviço
                </h3>
            </div>
                <div class="card-body">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ServiceCategoryId" class="control-label"></label>
                                    <select asp-for="ServiceCategoryId" class="form-control" asp-items="ViewBag.ServiceCategories">
                                        <option value="">Selecione uma categoria</option>
                                    </select>
                                    <span asp-validation-for="ServiceCategoryId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label"></label>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Duration" class="control-label"></label>
                                    <input asp-for="Duration" class="form-control" placeholder="Ex: 45 min, 1h 30min" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" />
                                        <label asp-for="IsActive" class="form-check-label">
                                            Serviço Ativo
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="file" class="control-label"></label>
                                    <input asp-for="file" type="file" id="photoInput" class="form-control" accept="image/*" />
                                    <span class="text-muted small">Formatos aceitos: JPG, PNG, GIF, WebP. Tamanho máximo: 2MB.</span>
                                    <span asp-validation-for="file" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3 text-center">
                                <img id="photoPreview" class="img-thumbnail mt-3" style="max-height:150px; display:none;" />
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descrição detalhada do serviço"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Salvar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Voltar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#photoInput').on('change', function (e) {
                const file = e.target.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = function (ev) {
                    $('#photoPreview').attr('src', ev.target.result).show();
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}
