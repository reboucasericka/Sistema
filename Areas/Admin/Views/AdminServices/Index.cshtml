@model IEnumerable<Sistema.Data.Entities.Service>

@{
    ViewData["Title"] = "Gestão de Serviços";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0"><i class="fas fa-concierge-bell me-2"></i>@ViewData["Title"]</h1>
        </div>
       
    </div>
</div>

<!-- Main Content -->
<section class="content">

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Serviço
        </a>
    </div>
</div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Estatísticas -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-primary">
                <div class="inner">
                    <h3>@Model.Count()</h3>
                    <p>Total de Serviços</p>
                </div>
                <div class="icon">
                    <i class="fas fa-concierge-bell"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.Count(s => s.IsActive)</h3>
                    <p>Serviços Ativos</p>
                </div>
                <div class="icon">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.Count(s => !s.IsActive)</h3>
                    <p>Serviços Inativos</p>
                </div>
                <div class="icon">
                    <i class="fas fa-times-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.Count(s => s.Category != null)</h3>
                    <p>Com Categoria</p>
                </div>
                <div class="icon">
                    <i class="fas fa-folder"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Serviços -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Lista de Serviços
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th>
                                    <i class="fas fa-concierge-bell me-1"></i>Nome
                                </th>
                                <th>
                                    <i class="fas fa-dollar-sign me-1"></i>Preço
                                </th>
                                <th>
                                    <i class="fas fa-clock me-1"></i>Duração
                                </th>
                                <th>
                                    <i class="fas fa-folder me-1"></i>Categoria
                                </th>
                                <th>
                                    <i class="fas fa-toggle-on me-1"></i>Status
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-cogs me-1"></i>Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (item.ImageId != Guid.Empty)
                                            {
                                                <img src="@item.ImageFullPath" alt="@item.Name" class="rounded me-2" width="40" height="40" style="object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="bg-primary rounded me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <i class="fas fa-concierge-bell text-white"></i>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold">@item.Name</div>
                                                <small class="text-muted text-truncate d-block" style="max-width: 200px;" title="@item.Description">
                                                    @item.Description
                                                </small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="text-primary fw-bold">@String.Format(new System.Globalization.CultureInfo("pt-PT"), "{0:C}", item.Price)</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@item.Duration min</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Category?.Name</span>
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Ativo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Inativo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1 justify-content-center">
                                            <a asp-action="Details" asp-route-id="@item.ServiceId" 
                                               class="btn btn-info btn-sm" title="Visualizar">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.ServiceId" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-area="Admin" asp-controller="ServiceProfessionals" asp-action="Edit" asp-route-serviceId="@item.ServiceId" 
                                               class="btn btn-success btn-sm" title="Vincular Profissional">
                                                <i class="fas fa-link"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ServiceId" 
                                               class="btn btn-danger btn-sm" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-concierge-bell fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum serviço encontrado</h5>
                    <p class="text-muted">Comece adicionando seu primeiro serviço.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Adicionar Primeiro Serviço
                    </a>
                </div>
            }
        </div>
    </div>
</section>
