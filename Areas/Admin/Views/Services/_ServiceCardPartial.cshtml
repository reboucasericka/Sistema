@model Sistema.Data.Entities.Service

<div class="col-md-6 col-lg-4 mb-4">
    <div class="card h-100 service-card">
        <div class="card-img-top-container">
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
            {
                <img src="~/uploads/services/@Model.PhotoPath" alt="@Model.Name" class="card-img-top" style="height: 200px; object-fit: cover;">
            }
            else
            {
                <div class="card-img-top bg-primary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                    <i class="fas fa-concierge-bell fa-3x"></i>
                </div>
            }
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text text-muted">@Model.Category?.Name</p>
            <p class="card-text">@Model.Description</p>
            <div class="mt-auto">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="h5 text-primary mb-0">
                        @String.Format(new System.Globalization.CultureInfo("pt-PT"), "{0:C}", Model.Price)
                    </span>
                    <span class="badge bg-secondary">@Model.Duration</span>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye"></i> View
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                Status: 
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-danger">Inactive</span>
                }
            </small>
        </div>
    </div>
</div>
