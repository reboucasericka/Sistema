@model Sistema.Data.Entities.CashMovement

@{
    ViewData["Title"] = "Excluir Movimentação";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <h1><i class="fas fa-trash me-2"></i>@ViewData["Title"]</h1>
    <p class="text-muted">Confirme a exclusão da movimentação de caixa</p>
</div>

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title text-danger">
                            <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>Warning!</strong> Are you sure you want to delete this cash movement? This action cannot be undone.
                        </div>

                        <dl class="row">
                            <dt class="col-sm-3">Movement ID:</dt>
                            <dd class="col-sm-9">@Model.CashMovementId</dd>

                            <dt class="col-sm-3">Date:</dt>
                            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-3">Type:</dt>
                            <dd class="col-sm-9">
                                <span class="badge @(Model.Type == "entry" ? "badge-success" : "badge-danger")">
                                    @(Model.Type == "entry" ? "Entry" : "Exit")
                                </span>
                            </dd>

                            <dt class="col-sm-3">Amount:</dt>
                            <dd class="col-sm-9">
                                <span class="@(Model.Type == "entry" ? "text-success" : "text-danger") font-weight-bold">
                                    @(Model.Type == "entry" ? "+" : "-") €@Model.Amount.ToString("N2")
                                </span>
                            </dd>

                            <dt class="col-sm-3">Description:</dt>
                            <dd class="col-sm-9">@Model.Description</dd>

                            <dt class="col-sm-3">Reference:</dt>
                            <dd class="col-sm-9">@(Model.Reference ?? "-")</dd>

                            <dt class="col-sm-3">Cash Register:</dt>
                            <dd class="col-sm-9">@Model.CashRegister.Date.ToString("dd/MM/yyyy")</dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CashMovementId" />
                            <div class="form-group">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Delete Movement
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
