@model Sistema.Data.Entities.Setting
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "New Configuration";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">New Configuration</h1>
            <p class="text-muted">Add a new clinic configuration</p>
        </div>
        <a href="@Url.Action("Index")" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Clinic Information</h6>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ClinicName" class="control-label">Clinic Name *</label>
                                    <input asp-for="ClinicName" class="form-control" placeholder="Enter clinic name" />
                                    <span asp-validation-for="ClinicName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="control-label">Email *</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="clinic@example.com" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LandlinePhone" class="control-label">Phone</label>
                                    <input asp-for="LandlinePhone" class="form-control" placeholder="+351 123 456 789" />
                                    <span asp-validation-for="LandlinePhone" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="WhatsAppPhone" class="control-label">WhatsApp</label>
                                    <input asp-for="WhatsAppPhone" class="form-control" placeholder="+351 987 654 321" />
                                    <span asp-validation-for="WhatsAppPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Address</label>
                            <textarea asp-for="Address" class="form-control" rows="2" placeholder="Enter clinic address"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="BusinessHours" class="control-label">Business Hours</label>
                                    <input asp-for="BusinessHours" class="form-control" placeholder="09:00-18:00" />
                                    <span asp-validation-for="BusinessHours" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="DefaultServiceDuration" class="control-label">Default Service Duration (minutes)</label>
                                    <input asp-for="DefaultServiceDuration" type="number" class="form-control" placeholder="60" />
                                    <span asp-validation-for="DefaultServiceDuration" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Configuration
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Information</h6>
                </div>
                <div class="card-body">
                    <h6>Required Fields:</h6>
                    <ul class="list-unstyled">
                        <li><strong>Clinic Name:</strong> Your clinic's name</li>
                        <li><strong>Email:</strong> Contact email</li>
                    </ul>
                    
                    <hr>
                    
                    <h6>Optional Fields:</h6>
                    <ul class="list-unstyled text-muted">
                        <li>• Phone number</li>
                        <li>• WhatsApp number</li>
                        <li>• Address</li>
                        <li>• Business hours</li>
                        <li>• Default service duration</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
