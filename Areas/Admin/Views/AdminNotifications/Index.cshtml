@model IEnumerable<Sistema.Data.Entities.Notification>

@{
    ViewData["Title"] = "Notificações";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Notificações</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Notificações</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Notificações</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#createNotificationModal">
                                <i class="fas fa-plus"></i> Nova Notificação
                            </button>
                            <button type="button" class="btn btn-success btn-sm" id="markAllAsReadBtn">
                                <i class="fas fa-check"></i> Marcar Todas como Lidas
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="notificationsTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Status</th>
                                        <th>Tipo</th>
                                        <th>Mensagem</th>
                                        <th>Data</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var notification in Model)
                                    {
                                        <tr class="@(notification.IsRead ? "" : "table-warning")">
                                            <td>
                                                @if (notification.IsRead)
                                                {
                                                    <span class="badge badge-success">Lida</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Não Lida</span>
                                                }
                                            </td>
                                            <td>
                                                @switch (notification.Type)
                                                {
                                                    case "info":
                                                        <span class="badge badge-info">Informação</span>
                                                        break;
                                                    case "warning":
                                                        <span class="badge badge-warning">Aviso</span>
                                                        break;
                                                    case "error":
                                                        <span class="badge badge-danger">Erro</span>
                                                        break;
                                                    case "success":
                                                        <span class="badge badge-success">Sucesso</span>
                                                        break;
                                                    default:
                                                        <span class="badge badge-secondary">@notification.Type</span>
                                                        break;
                                                }
                                            </td>
                                            <td>@notification.Message</td>
                                            <td>@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Details", new { id = notification.NotificationId })" 
                                                       class="btn btn-info btn-sm" title="Visualizar">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (!notification.IsRead)
                                                    {
                                                        <button type="button" class="btn btn-success btn-sm mark-as-read-btn" 
                                                                data-id="@notification.NotificationId" title="Marcar como Lida">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                    }
                                                    <a href="@Url.Action("Delete", new { id = notification.NotificationId })" 
                                                       class="btn btn-danger btn-sm" title="Excluir">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Modal para Criar Notificação -->
<div class="modal fade" id="createNotificationModal" tabindex="-1" role="dialog" aria-labelledby="createNotificationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createNotificationModalLabel">Nova Notificação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="Message" class="control-label">Mensagem</label>
                        <textarea name="Message" class="form-control" rows="3" placeholder="Digite a mensagem da notificação..." required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Type" class="control-label">Tipo</label>
                        <select name="Type" class="form-control" required>
                            <option value="">Selecione um tipo</option>
                            <option value="info">Informação</option>
                            <option value="warning">Aviso</option>
                            <option value="error">Erro</option>
                            <option value="success">Sucesso</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Criar Notificação</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Configurar DataTable
            $('#notificationsTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                "order": [[3, "desc"]] // Ordenar por data decrescente
            });

            // Marcar como lida
            $('.mark-as-read-btn').click(function() {
                var notificationId = $(this).data('id');
                var button = $(this);
                
                $.ajax({
                    url: '@Url.Action("MarkAsRead")',
                    type: 'POST',
                    data: { id: notificationId },
                    success: function(response) {
                        if (response.success) {
                            button.closest('tr').removeClass('table-warning').addClass('table-success');
                            button.replaceWith('<span class="badge badge-success">Lida</span>');
                        }
                    }
                });
            });

            // Marcar todas como lidas
            $('#markAllAsReadBtn').click(function() {
                $.ajax({
                    url: '@Url.Action("MarkAllAsRead")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}

