@model IEnumerable<Sistema.Data.Entities.Notification>

@{
    ViewData["Title"] = "Notificações";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Header -->
<div class="content-header">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0"><i class="fas fa-bell me-2"></i>Notificações</h1>
        </div>
    </div>
</div>

<!-- Main Content -->
<section class="content">
    <div class="row mb-3">
        <div class="col-12">
            <div class="d-flex gap-2">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createNotificationModal">
                    <i class="fas fa-plus me-2"></i>Nova Notificação
                </button>
                <button type="button" class="btn btn-success" id="markAllAsReadBtn">
                    <i class="fas fa-check me-2"></i>Marcar Todas como Lidas
                </button>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Lista de Notificações
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="notificationsTable" class="table table-hover align-middle">
                    <thead class="table-light text-uppercase small">
                        <tr>
                            <th><i class="fas fa-toggle-on me-1"></i>Status</th>
                            <th><i class="fas fa-tag me-1"></i>Tipo</th>
                            <th><i class="fas fa-comment me-1"></i>Mensagem</th>
                            <th><i class="fas fa-calendar me-1"></i>Data</th>
                            <th class="text-center"><i class="fas fa-cogs me-1"></i>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var notification in Model)
                        {
                            <tr class="@(notification.IsRead ? "" : "table-warning")">
                                <td>
                                    @if (notification.IsRead)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Lida
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-clock me-1"></i>Não Lida
                                        </span>
                                    }
                                </td>
                                <td>
                                    @switch (notification.Type)
                                    {
                                        case "info":
                                            <span class="badge bg-info">Informação</span>
                                            break;
                                        case "warning":
                                            <span class="badge bg-warning">Aviso</span>
                                            break;
                                        case "error":
                                            <span class="badge bg-danger">Erro</span>
                                            break;
                                        case "success":
                                            <span class="badge bg-success">Sucesso</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">@notification.Type</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="text-truncate" style="max-width: 300px;" title="@notification.Message">
                                        @notification.Message
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted">@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                </td>
                                <td>
                                    <div class="d-flex gap-1 justify-content-center">
                                        <a asp-action="Details" asp-route-id="@notification.NotificationId" 
                                           class="btn btn-info btn-sm" title="Visualizar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (!notification.IsRead)
                                        {
                                            <button type="button" class="btn btn-success btn-sm mark-as-read-btn" 
                                                    data-id="@notification.NotificationId" title="Marcar como Lida">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                        <a asp-action="Delete" asp-route-id="@notification.NotificationId" 
                                           class="btn btn-danger btn-sm" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

<!-- Modal para Criar Notificação -->
<div class="modal fade" id="createNotificationModal" tabindex="-1" aria-labelledby="createNotificationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createNotificationModalLabel">Nova Notificação</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="Message" class="form-label">Mensagem</label>
                        <textarea name="Message" class="form-control" rows="3" placeholder="Digite a mensagem da notificação..." required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="Type" class="form-label">Tipo</label>
                        <select name="Type" class="form-select" required>
                            <option value="">Selecione um tipo</option>
                            <option value="info">Informação</option>
                            <option value="warning">Aviso</option>
                            <option value="error">Erro</option>
                            <option value="success">Sucesso</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Criar Notificação</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Configurar DataTable
            $('#notificationsTable').DataTable({
                "responsive": true,
                "lengthChange": false,
                "autoWidth": false,
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json"
                },
                "order": [[3, "desc"]] // Ordenar por data decrescente
            });

            // Marcar como lida
            $('.mark-as-read-btn').click(function() {
                var notificationId = $(this).data('id');
                var button = $(this);
                
                $.ajax({
                    url: '@Url.Action("MarkAsRead")',
                    type: 'POST',
                    data: { id: notificationId },
                    success: function(response) {
                        if (response.success) {
                            button.closest('tr').removeClass('table-warning').addClass('table-success');
                            button.replaceWith('<span class="badge badge-success">Lida</span>');
                        }
                    }
                });
            });

            // Marcar todas como lidas
            $('#markAllAsReadBtn').click(function() {
                $.ajax({
                    url: '@Url.Action("MarkAllAsRead")',
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        }
                    }
                });
            });
        });
    </script>
}

