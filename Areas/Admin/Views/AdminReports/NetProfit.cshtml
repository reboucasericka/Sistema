@{
    ViewData["Title"] = "Relatório de Lucro Líquido";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Relatório de Lucro Líquido</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Relatórios</a></li>
                    <li class="breadcrumb-item active">Lucro Líquido</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Filtros -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Filtros</h3>
            </div>
            <div class="card-body">
                <form method="get" class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="startDate">Data Inicial:</label>
                            <input type="date" id="startDate" name="startDate" class="form-control" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label for="endDate">Data Final:</label>
                            <input type="date" id="endDate" name="endDate" class="form-control" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Filtrar
                                </button>
                                <a asp-action="NetProfit" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Limpar
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Resumo Financeiro -->
        <div class="row">
            <div class="col-lg-3 col-6">
                <div class="small-box bg-success">
                    <div class="inner">
                        <h3>€@ViewBag.TotalRevenue?.ToString("N2")</h3>
                        <p>Receita Total</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-up"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-warning">
                    <div class="inner">
                        <h3>€@ViewBag.TotalCommissions?.ToString("N2")</h3>
                        <p>Comissões</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-percentage"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-danger">
                    <div class="inner">
                        <h3>€@ViewBag.TotalOtherPayments?.ToString("N2")</h3>
                        <p>Outros Pagamentos</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-arrow-down"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="small-box bg-primary">
                    <div class="inner">
                        <h3>€@ViewBag.NetProfit?.ToString("N2")</h3>
                        <p>Lucro Líquido</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Margem de Lucro -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Margem de Lucro</h3>
                    </div>
                    <div class="card-body">
                        <div class="progress-group">
                            <div class="progress-text">
                                <span class="float-left">Margem de Lucro</span>
                                <span class="float-right">@ViewBag.ProfitMargin?.ToString("N1")%</span>
                            </div>
                            <div class="progress">
                                <div class="progress-bar bg-success" style="width: @ViewBag.ProfitMargin%"></div>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                Margem de lucro = (Lucro Líquido / Receita Total) × 100
                            </small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Distribuição de Custos</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="costDistributionChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Gráfico de Lucro por Dia -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lucro por Dia</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="profitByDayChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Análise Detalhada -->
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Análise de Receita</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td><strong>Receita Total:</strong></td>
                                <td class="text-right">€@ViewBag.TotalRevenue?.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><strong>Comissões:</strong></td>
                                <td class="text-right text-warning">-€@ViewBag.TotalCommissions?.ToString("N2")</td>
                            </tr>
                            <tr>
                                <td><strong>Outros Pagamentos:</strong></td>
                                <td class="text-right text-danger">-€@ViewBag.TotalOtherPayments?.ToString("N2")</td>
                            </tr>
                            <tr class="table-success">
                                <td><strong>Lucro Líquido:</strong></td>
                                <td class="text-right"><strong>€@ViewBag.NetProfit?.ToString("N2")</strong></td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Indicadores de Performance</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info">
                                        <i class="fas fa-percentage"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Margem de Lucro</span>
                                        <span class="info-box-number">@ViewBag.ProfitMargin?.ToString("N1")%</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="info-box">
                                    <span class="info-box-icon bg-warning">
                                        <i class="fas fa-chart-pie"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">% Comissões</span>
                                        <span class="info-box-number">
                                            @{
                                                var commissionPercentage = ViewBag.TotalRevenue > 0 ? (ViewBag.TotalCommissions / ViewBag.TotalRevenue) * 100 : 0;
                                            }
                                            @commissionPercentage.ToString("N1")%
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de Distribuição de Custos
        const costDistributionCtx = document.getElementById('costDistributionChart').getContext('2d');
        new Chart(costDistributionCtx, {
            type: 'doughnut',
            data: {
                labels: ['Lucro Líquido', 'Comissões', 'Outros Pagamentos'],
                datasets: [{
                    data: [
                        @ViewBag.NetProfit,
                        @ViewBag.TotalCommissions,
                        @ViewBag.TotalOtherPayments
                    ],
                    backgroundColor: [
                        'rgba(40, 167, 69, 0.8)',
                        'rgba(255, 193, 7, 0.8)',
                        'rgba(220, 53, 69, 0.8)'
                    ],
                    borderColor: [
                        'rgba(40, 167, 69, 1)',
                        'rgba(255, 193, 7, 1)',
                        'rgba(220, 53, 69, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const value = context.parsed;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((value / total) * 100).toFixed(1);
                                return context.label + ': €' + value.toFixed(2) + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });

        // Gráfico de Lucro por Dia
        const profitByDayData = @Html.Raw(Json.Serialize(ViewBag.ProfitByDay));
        const dayLabels = profitByDayData.map(item => {
            const date = new Date(item.date);
            return date.toLocaleDateString('pt-PT');
        });
        const revenueData = profitByDayData.map(item => item.revenue);
        const commissionData = profitByDayData.map(item => item.commissions);
        const profitData = profitByDayData.map(item => item.profit);

        const profitByDayCtx = document.getElementById('profitByDayChart').getContext('2d');
        new Chart(profitByDayCtx, {
            type: 'bar',
            data: {
                labels: dayLabels,
                datasets: [{
                    label: 'Receita',
                    data: revenueData,
                    backgroundColor: 'rgba(40, 167, 69, 0.6)',
                    borderColor: 'rgba(40, 167, 69, 1)',
                    borderWidth: 1
                }, {
                    label: 'Comissões',
                    data: commissionData,
                    backgroundColor: 'rgba(255, 193, 7, 0.6)',
                    borderColor: 'rgba(255, 193, 7, 1)',
                    borderWidth: 1
                }, {
                    label: 'Lucro Líquido',
                    data: profitData,
                    backgroundColor: 'rgba(0, 123, 255, 0.6)',
                    borderColor: 'rgba(0, 123, 255, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '€' + value.toFixed(2);
                            }
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                return context.dataset.label + ': €' + context.parsed.y.toFixed(2);
                            }
                        }
                    }
                }
            }
        });
    </script>
}
