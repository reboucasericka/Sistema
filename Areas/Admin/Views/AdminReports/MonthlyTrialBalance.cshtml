@{
    ViewData["Title"] = "Monthly Trial Balance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var cashRegisters = ViewBag.CashRegisters as List<Sistema.Data.Entities.CashRegister>;
    var movements = ViewBag.Movements as List<Sistema.Data.Entities.CashMovement>;
    var dailySummaries = ViewBag.DailySummaries as List<dynamic>;
    var totalInitialAmount = (decimal)ViewBag.TotalInitialAmount;
    var totalFinalAmount = (decimal)ViewBag.TotalFinalAmount;
    var totalEntries = (decimal)ViewBag.TotalEntries;
    var totalExits = (decimal)ViewBag.TotalExits;
    var totalExpected = (decimal)ViewBag.TotalExpected;
    var totalDifference = (decimal)ViewBag.TotalDifference;
    var year = (int)ViewBag.Year;
    var month = (int)ViewBag.Month;
    var startDate = (DateTime)ViewBag.StartDate;
    var endDate = (DateTime)ViewBag.EndDate;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Monthly Trial Balance</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Reports</a></li>
                    <li class="breadcrumb-item active">Monthly Trial Balance</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <!-- Month Selector -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Select Month</h3>
                    </div>
                    <div class="card-body">
                        <form method="get" class="form-inline">
                            <div class="form-group mr-3">
                                <label for="year" class="mr-2">Year:</label>
                                <select name="year" id="year" class="form-control">
                                    @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 1; y++)
                                    {
                                        <option value="@y" selected="@(y == year)">@y</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group mr-3">
                                <label for="month" class="mr-2">Month:</label>
                                <select name="month" id="month" class="form-control">
                                    @for (int m = 1; m <= 12; m++)
                                    {
                                        <option value="@m" selected="@(m == month)">@(new DateTime(2000, m, 1).ToString("MMMM"))</option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-search"></i> Generate Report
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Monthly Summary -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-line"></i> Monthly Summary - @startDate.ToString("MMMM yyyy")
                        </h3>
                        <div class="card-tools">
                            <button onclick="window.print()" class="btn btn-primary btn-sm">
                                <i class="fas fa-print"></i> Print Report
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-info"><i class="fas fa-cash-register"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Total Initial</span>
                                        <span class="info-box-number">€@totalInitialAmount.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-success"><i class="fas fa-arrow-up"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Total Entries</span>
                                        <span class="info-box-number">€@totalEntries.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-danger"><i class="fas fa-arrow-down"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Total Exits</span>
                                        <span class="info-box-number">€@totalExits.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="info-box">
                                    <span class="info-box-icon bg-warning"><i class="fas fa-money-bill-wave"></i></span>
                                    <div class="info-box-content">
                                        <span class="info-box-text">Total Final</span>
                                        <span class="info-box-number">€@totalFinalAmount.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-6">
                                <div class="card card-outline card-info">
                                    <div class="card-header">
                                        <h3 class="card-title">Expected Total</h3>
                                    </div>
                                    <div class="card-body">
                                        <h4>€@totalExpected.ToString("N2")</h4>
                                        <small class="text-muted">Initial + Entries - Exits</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card card-outline @(totalDifference == 0 ? "card-success" : "card-warning")">
                                    <div class="card-header">
                                        <h3 class="card-title">Difference</h3>
                                    </div>
                                    <div class="card-body">
                                        <h4 class="@(totalDifference == 0 ? "text-success" : "text-warning")">€@totalDifference.ToString("N2")</h4>
                                        <small class="text-muted">Actual - Expected</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Daily Breakdown -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Daily Breakdown</h3>
                    </div>
                    <div class="card-body">
                        @if (dailySummaries.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Date</th>
                                            <th>Initial Amount</th>
                                            <th>Entries</th>
                                            <th>Exits</th>
                                            <th>Expected Final</th>
                                            <th>Actual Final</th>
                                            <th>Difference</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var day in dailySummaries)
                                        {
                                            var expectedFinal = day.InitialAmount + day.DayEntries - day.DayExits;
                                            var difference = day.FinalAmount - expectedFinal;
                                            var cashRegister = cashRegisters.FirstOrDefault(cr => cr.Date.Date == day.Date.Date);
                                            
                                            <tr>
                                                <td>@day.Date.ToString("dd/MM/yyyy")</td>
                                                <td>€@day.InitialAmount.ToString("N2")</td>
                                                <td class="text-success">€@day.DayEntries.ToString("N2")</td>
                                                <td class="text-danger">€@day.DayExits.ToString("N2")</td>
                                                <td>€@expectedFinal.ToString("N2")</td>
                                                <td>€@day.FinalAmount.ToString("N2")</td>
                                                <td class="@(difference == 0 ? "text-success" : "text-warning")">
                                                    €@difference.ToString("N2")
                                                </td>
                                                <td>
                                                    @if (cashRegister != null)
                                                    {
                                                        <span class="badge @(cashRegister.Status == "aberto" ? "badge-success" : "badge-danger")">
                                                            @(cashRegister.Status == "aberto" ? "Open" : "Closed")
                                                        </span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                No cash registers found for @startDate.ToString("MMMM yyyy").
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Monthly Statistics -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Monthly Statistics</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-6">Total Days:</dt>
                            <dd class="col-sm-6">@dailySummaries.Count</dd>
                            
                            <dt class="col-sm-6">Open Registers:</dt>
                            <dd class="col-sm-6">@cashRegisters.Count(c => c.Status == "aberto")</dd>
                            
                            <dt class="col-sm-6">Closed Registers:</dt>
                            <dd class="col-sm-6">@cashRegisters.Count(c => c.Status == "fechado")</dd>
                            
                            <dt class="col-sm-6">Total Movements:</dt>
                            <dd class="col-sm-6">@movements.Count</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Financial Summary</h3>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="description-block">
                                    <span class="description-text">Net Cash Flow</span>
                                    <span class="description-number @(totalEntries - totalExits >= 0 ? "text-success" : "text-danger")">
                                        €@((totalEntries - totalExits).ToString("N2"))
                                    </span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="description-block">
                                    <span class="description-text">Accuracy</span>
                                    <span class="description-number @(totalDifference == 0 ? "text-success" : "text-warning")">
                                        @(totalDifference == 0 ? "100%" : $"{((totalExpected / totalFinalAmount) * 100):F1}%")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @@media print {
        .card-tools, .breadcrumb, .content-header {
            display: none !important;
        }
        .card {
            border: none !important;
            box-shadow: none !important;
        }
    }
</style>
