@model Sistema.Data.Entities.Professional
@{
    ViewData["Title"] = "Delete Professional";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>Delete Professional
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this professional?
                    </div>

                    <div class="row">
                        <div class="col-md-8">
                            <h5>Professional Information</h5>
                            <table class="table table-borderless">
                                <tr>
                                    <td class="fw-bold">Name:</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Specialty:</td>
                                    <td>@Model.Specialty</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Email:</td>
                                    <td>@Model.User?.Email</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Status:</td>
                                    <td>
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-4">
                            @if (Model.ImageId != Guid.Empty)
                            {
                                <img src="@Model.ImageFullPath" alt="@Model.Name" class="img-thumbnail w-100">
                            }
                            else
                            {
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center mx-auto" style="width: 150px; height: 150px;">
                                    <i class="fas fa-user fa-3x text-white"></i>
                                </div>
                            }
                        </div>
                    </div>

                    @if (Model.Appointments?.Any() == true)
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> This professional has @Model.Appointments.Count appointment(s). 
                            The professional will be deactivated instead of deleted to preserve appointment history.
                        </div>
                    }

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="ProfessionalId" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete Professional
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
