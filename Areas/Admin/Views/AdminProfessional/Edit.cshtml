@model Sistema.Models.Admin.AdminProfessionalEditViewModel
@{
    ViewData["Title"] = "Edit Professional";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-user-edit me-2"></i>Edit Professional
                    </h3>
                </div>
                <div class="card-body">
                    <!-- Success/Error Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input asp-for="ProfessionalId" type="hidden" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label"></label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Specialty" class="form-label"></label>
                                    <input asp-for="Specialty" class="form-control" placeholder="Enter specialty" />
                                    <span asp-validation-for="Specialty" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserId" class="form-label">User</label>
                                    <input asp-for="UserId" class="form-control" readonly />
                                    <small class="form-text text-muted">User cannot be changed after creation</small>
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DefaultCommission" class="form-label"></label>
                                    <div class="input-group">
                                        <input asp-for="DefaultCommission" class="form-control" placeholder="0.00" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="DefaultCommission" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="file" class="form-label"></label>
                                    <input asp-for="file" type="file" id="photoInput" class="form-control" accept="image/*" />
                                    <span class="text-muted small">Deixe em branco para manter a foto atual.</span>
                                    <span asp-validation-for="file" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3 text-center">
                                @if (!string.IsNullOrEmpty(Model.ImageId))
                                {
                                    <img id="photoPreview" src="@Model.ImageId" class="img-thumbnail mt-3" style="max-height:150px;" />
                                }
                                else
                                {
                                    <img id="photoPreview" src="~/images/default-user.png" class="img-thumbnail mt-3" style="max-height:150px;" />
                                }
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input asp-for="IsActive" class="form-check-input" />
                                        <label asp-for="IsActive" class="form-check-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Back to List
                                    </a>
                                    <div>
                                        <a asp-action="Details" asp-route-id="@Model.ProfessionalId" class="btn btn-info me-2">
                                            <i class="fas fa-eye me-2"></i>View Details
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-save me-2"></i>Update Professional
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function() {
            $('#photoInput').on('change', function (e) {
                const file = e.target.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = function (ev) {
                    $('#photoPreview').attr('src', ev.target.result).show();
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}
