@model IEnumerable<Sistema.Models.Admin.AdminCustomerViewModel>
@{
    ViewData["Title"] = "Customer Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-users me-2"></i>Customer Management
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Customer
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search and Filter -->
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" 
                                           class="form-control" placeholder="Search by name, email, or phone...">
                                    <button class="btn btn-outline-secondary" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <select name="sortOrder" class="form-select">
                                    <option value="">Sort by Name</option>
                                    <option value="name_desc">Sort by Name (Desc)</option>
                                    <option value="email">Sort by Email</option>
                                    <option value="email_desc">Sort by Email (Desc)</option>
                                    <option value="date">Sort by Registration Date</option>
                                    <option value="date_desc">Sort by Registration Date (Desc)</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-outline-primary w-100">Apply Filters</button>
                            </div>
                        </div>
                    </form>

                    <!-- Customers Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Photo</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Registration Date</th>
                                    <th>Appointments</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (customer.ImageId != Guid.Empty)
                                            {
                                                <img src="@customer.ImageFullPath" alt="@customer.Name" class="rounded-circle me-2" width="32" height="32">
                                            }
                                            else
                                            {
                                                <img src="~/images/default-user.png" alt="@customer.Name" class="rounded-circle me-2" width="32" height="32">
                                            }
                                        </td>
                                        <td>
                                            <strong>@customer.Name</strong>
                                            @if (!string.IsNullOrEmpty(customer.Notes))
                                            {
                                                <br><small class="text-muted">@customer.Notes</small>
                                            }
                                        </td>
                                        <td>@customer.Email</td>
                                        <td>@customer.Phone</td>
                                        <td>@customer.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <span class="badge bg-info">@customer.TotalAppointments Total</span>
                                            <span class="badge bg-success">@customer.ActiveAppointments Active</span>
                                        </td>
                                        <td>
                                            @if (customer.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@customer.CustomerId" 
                                                   class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@customer.CustomerId" 
                                                   class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Appointments" asp-route-id="@customer.CustomerId" 
                                                   class="btn btn-sm btn-outline-primary" title="View Appointments">
                                                    <i class="fas fa-calendar"></i>
                                                </a>
                                                <form asp-action="ToggleStatus" asp-route-id="@customer.CustomerId" 
                                                      method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-secondary" 
                                                            title="@(customer.IsActive ? "Deactivate" : "Activate")">
                                                        <i class="fas fa-@(customer.IsActive ? "pause" : "play")"></i>
                                                    </button>
                                                </form>
                                                <a asp-action="Delete" asp-route-id="@customer.CustomerId" 
                                                   class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-users fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No customers found</h5>
                            <p class="text-muted">Try adjusting your search criteria or add a new customer.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Set current sort order in dropdown
            var currentSort = '@ViewData["CurrentSort"]';
            $('select[name="sortOrder"]').val(currentSort);
        });
    </script>
}
