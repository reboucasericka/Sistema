@model Sistema.Data.Entities.CashRegister

@{
    ViewData["Title"] = "Fechar Caixa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <h1><i class="fas fa-lock me-2"></i>@ViewData["Title"]</h1>
    <p class="text-muted">Feche o caixa e finalize as operações do dia</p>
</div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Fechar Caixa</h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Informações do Caixa:</strong><br>
                            <strong>Data:</strong> @Model.Date.ToString("dd/MM/yyyy")<br>
                            <strong>Valor Inicial:</strong> €@Model.InitialValue.ToString("N2")<br>
                            <strong>Status:</strong> <span class="badge badge-success">Aberto</span>
                        </div>

                        <form asp-action="Close">
                            <input type="hidden" asp-for="CashRegisterId" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="FinalValue" class="control-label">Valor Final (€)</label>
                                        <input asp-for="FinalValue" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                                        <span asp-validation-for="FinalValue" class="text-danger"></span>
                                        <small class="form-text text-muted">Digite o valor real contado no caixa</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Valor Esperado (€)</label>
                                        <input type="text" class="form-control" value="@ViewBag.ValorEsperado?.ToString("N2")" readonly />
                                        <small class="form-text text-muted">Valor inicial + movimentos</small>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Notes" class="control-label">Observações</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Observações sobre o fechamento do caixa..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Atenção!</strong> Fechar o caixa finalizará todas as transações do dia. Esta ação não pode ser desfeita.
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-lock"></i> Fechar Caixa
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
