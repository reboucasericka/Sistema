@model Sistema.Data.Entities.CashRegister

@{
    ViewData["Title"] = "Cash Register Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Cash Register Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Cash Register</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Cash Register Information</h3>
                        <div class="card-tools">
                            @if (Model.Status == "aberto")
                            {
                                <a asp-action="Close" asp-route-id="@Model.CashRegisterId" class="btn btn-danger btn-sm">
                                    <i class="fas fa-lock"></i> Close Register
                                </a>
                            }
                            <a asp-action="DailyReport" asp-route-id="@Model.CashRegisterId" class="btn btn-primary btn-sm">
                                <i class="fas fa-file-alt"></i> Daily Report
                            </a>
                            <a asp-controller="CashMovements" asp-action="Index" asp-route-cashRegisterId="@Model.CashRegisterId" class="btn btn-info btn-sm">
                                <i class="fas fa-exchange-alt"></i> View Movements
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-sm">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">Register ID:</dt>
                            <dd class="col-sm-9">@Model.CashRegisterId</dd>

                            <dt class="col-sm-3">Date:</dt>
                            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-3">Status:</dt>
                            <dd class="col-sm-9">
                                <span class="badge @(Model.Status == "aberto" ? "badge-success" : "badge-danger")">
                                    @(Model.Status == "aberto" ? "Open" : "Closed")
                                </span>
                            </dd>

                            <dt class="col-sm-3">Initial Amount:</dt>
                            <dd class="col-sm-9">
                                <span class="font-weight-bold text-success">€@Model.InitialValue.ToString("N2")</span>
                            </dd>

                            @if (Model.Status == "fechado")
                            {
                                <dt class="col-sm-3">Final Amount:</dt>
                                <dd class="col-sm-9">
                                    <span class="font-weight-bold text-info">€@Model.FinalValue.ToString("N2")</span>
                                </dd>
                            }

                            <dt class="col-sm-3">Opening User:</dt>
                            <dd class="col-sm-9">@(Model.OpeningUser?.FirstName ?? "Unknown") @(Model.OpeningUser?.LastName ?? "")</dd>

                            @if (Model.ClosingUser != null)
                            {
                                <dt class="col-sm-3">Closing User:</dt>
                                <dd class="col-sm-9">@Model.ClosingUser.FirstName @Model.ClosingUser.LastName</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <dt class="col-sm-3">Notes:</dt>
                                <dd class="col-sm-9">@Model.Notes</dd>
                            }
                        </dl>

                        @if (Model.Status == "aberto")
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle"></i>
                                <strong>Open Cash Register:</strong> This register is currently open. You can add movements and close it when finished.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i>
                                <strong>Closed Cash Register:</strong> This register has been closed and finalized.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
