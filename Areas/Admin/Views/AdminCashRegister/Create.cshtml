@model Sistema.Data.Entities.CashRegister

@{
    ViewData["Title"] = "Abrir Novo Caixa";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <h1><i class="fas fa-cash-register me-2"></i>@ViewData["Title"]</h1>
    <p class="text-muted">Abra um novo caixa para iniciar as operações</p>
</div>

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Voltar
        </a>
    </div>
</div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Open New Cash Register</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Date" class="control-label">Date</label>
                                        <input asp-for="Date" class="form-control" type="date" />
                                        <span asp-validation-for="Date" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="InitialValue" class="control-label">Initial Amount (€)</label>
                                        <input asp-for="InitialValue" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                                        <span asp-validation-for="InitialValue" class="text-danger"></span>
                                        <small class="form-text text-muted">Enter the initial cash amount in the register</small>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Notes" class="control-label">Notes</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Optional notes about the cash register opening..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-cash-register"></i> Open Cash Register
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Back to List
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Set current date
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date().toISOString().split('T')[0];
            document.querySelector('input[type="date"]').value = today;
        });
    </script>
}
