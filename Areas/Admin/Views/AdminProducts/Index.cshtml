@model IEnumerable<Sistema.Data.Entities.Product>

@{
    ViewData["Title"] = "Gestão de Produtos";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <h1><i class="fas fa-boxes me-2"></i>@ViewData["Title"]</h1>
    <p class="text-muted">Gerencie o catálogo de produtos da sua empresa</p>
</div>

<div class="row mb-3">
    <div class="col-12">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Novo Produto
        </a>
    </div>
</div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Estatísticas -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-primary">
                <div class="inner">
                    <h3>@Model.Count()</h3>
                    <p>Total de Produtos</p>
                </div>
                <div class="icon">
                    <i class="fas fa-boxes"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.Count(p => p.Stock > p.MinimumStockLevel)</h3>
                    <p>Em Estoque</p>
                </div>
                <div class="icon">
                    <i class="fas fa-check-circle"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.Count(p => p.Stock <= p.MinimumStockLevel)</h3>
                    <p>Estoque Baixo</p>
                </div>
                <div class="icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6">
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@Model.Count(p => p.Stock == 0)</h3>
                    <p>Sem Estoque</p>
                </div>
                <div class="icon">
                    <i class="fas fa-times-circle"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Produtos -->
    <div class="card shadow-sm">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-list me-2"></i>Lista de Produtos
            </h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light text-uppercase small">
                            <tr>
                                <th>
                                    <i class="fas fa-image me-1"></i>Imagem
                                </th>
                                <th>
                                    <i class="fas fa-tag me-1"></i>Nome
                                </th>
                                <th>
                                    <i class="fas fa-folder me-1"></i>Categoria
                                </th>
                                <th>
                                    <i class="fas fa-dollar-sign me-1"></i>Preço Compra
                                </th>
                                <th>
                                    <i class="fas fa-tag me-1"></i>Preço Venda
                                </th>
                                <th>
                                    <i class="fas fa-boxes me-1"></i>Estoque
                                </th>
                                <th>
                                    <i class="fas fa-truck me-1"></i>Fornecedor
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-cogs me-1"></i>Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ImageFullPath))
                                        {
                                            <img src="@Url.Content(item.ImageFullPath)" alt="Imagem do Produto" 
                                                 class="rounded" style="width:50px; height:50px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                 style="width:50px; height:50px;">
                                                <i class="fas fa-image text-muted"></i>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div class="fw-bold">@Html.DisplayFor(modelItem => item.Name)</div>
                                        <small class="text-muted text-truncate d-block" style="max-width: 200px;" title="@Html.DisplayFor(modelItem => item.Description)">
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@Html.DisplayFor(modelItem => item.ProductCategory.Name)</span>
                                    </td>
                                    <td>
                                        <span class="text-success fw-bold">€ @Html.DisplayFor(modelItem => item.PurchasePrice)</span>
                                    </td>
                                    <td>
                                        <span class="text-primary fw-bold">€ @Html.DisplayFor(modelItem => item.SalePrice)</span>
                                    </td>
                                    <td>
                                        @{
                                            var stockClass = item.Stock <= item.MinimumStockLevel ? "text-danger" : "text-success";
                                        }
                                        <div>
                                            <span class="@stockClass fw-bold">@Html.DisplayFor(modelItem => item.Stock)</span>
                                            <small class="text-muted d-block">Mín: @Html.DisplayFor(modelItem => item.MinimumStockLevel)</small>
                                        </div>
                                    </td>
                                    <td>
                                        <small class="text-muted">@Html.DisplayFor(modelItem => item.Supplier.Name)</small>
                                    </td>
                                    <td>
                                        <div class="d-flex gap-1 justify-content-center">
                                            <a asp-action="Details" asp-route-id="@item.ProductId" 
                                               class="btn btn-info btn-sm" title="Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.ProductId" 
                                               class="btn btn-warning btn-sm" title="Editar">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ProductId" 
                                               class="btn btn-danger btn-sm" title="Excluir">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-boxes fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhum produto encontrado</h5>
                    <p class="text-muted">Comece adicionando seu primeiro produto.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Adicionar Primeiro Produto
                    </a>
                </div>
            }
        </div>
    </div>
