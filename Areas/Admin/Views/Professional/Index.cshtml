@model IEnumerable<Sistema.Models.Admin.ProfessionalViewModel>
@{
    ViewData["Title"] = "Professionals Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">
                        <i class="fas fa-user-md me-2"></i>Professionals Management
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Professional
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search and Filter -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <form asp-action="Index" method="get">
                                <div class="input-group">
                                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by name, specialty, or email...">
                                    <button type="submit" class="btn btn-outline-secondary">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times"></i>
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Professionals Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-white text-decoration-none">
                                            Name
                                            @if (ViewData["CurrentSort"]?.ToString() == "name_desc")
                                            {
                                                <i class="fas fa-sort-down"></i>
                                            }
                                            else if (ViewData["CurrentSort"]?.ToString() == "")
                                            {
                                                <i class="fas fa-sort-up"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["SpecialtySortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-white text-decoration-none">
                                            Specialty
                                            @if (ViewData["CurrentSort"]?.ToString() == "specialty_desc")
                                            {
                                                <i class="fas fa-sort-down"></i>
                                            }
                                            else if (ViewData["CurrentSort"]?.ToString() == "specialty")
                                            {
                                                <i class="fas fa-sort-up"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Email</th>
                                    <th>Services</th>
                                    <th>Appointments</th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["StatusSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-white text-decoration-none">
                                            Status
                                            @if (ViewData["CurrentSort"]?.ToString() == "status_desc")
                                            {
                                                <i class="fas fa-sort-down"></i>
                                            }
                                            else if (ViewData["CurrentSort"]?.ToString() == "status")
                                            {
                                                <i class="fas fa-sort-up"></i>
                                            }
                                        </a>
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.PhotoPath))
                                                {
                                                    <img src="@item.PhotoPath" alt="@item.Name" class="rounded-circle me-2" width="32" height="32">
                                                }
                                                else
                                                {
                                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                        <i class="fas fa-user text-white"></i>
                                                    </div>
                                                }
                                                <strong>@item.Name</strong>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.Specialty</span>
                                        </td>
                                        <td>@item.UserEmail</td>
                                        <td>
                                            <span class="badge bg-secondary">@item.TotalServices</span>
                                        </td>
                                        <td>
                                            <div class="d-flex flex-column">
                                                <small class="text-muted">Total: @item.TotalAppointments</small>
                                                <small class="text-success">Active: @item.ActiveAppointments</small>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.ProfessionalId" class="btn btn-sm btn-outline-info" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.ProfessionalId" class="btn btn-sm btn-outline-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Appointments" asp-route-id="@item.ProfessionalId" class="btn btn-sm btn-outline-primary" title="View Appointments">
                                                    <i class="fas fa-calendar"></i>
                                                </a>
                                                <form asp-action="ToggleStatus" asp-route-id="@item.ProfessionalId" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm @(item.IsActive ? "btn-outline-danger" : "btn-outline-success")" title="@(item.IsActive ? "Deactivate" : "Activate")">
                                                        <i class="fas @(item.IsActive ? "fa-ban" : "fa-check")"></i>
                                                    </button>
                                                </form>
                                                <a asp-action="Delete" asp-route-id="@item.ProfessionalId" class="btn btn-sm btn-outline-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-user-md fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No professionals found</h5>
                            <p class="text-muted">Start by adding your first professional.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add Professional
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="toast-container position-fixed bottom-0 end-0 p-3">
        <div class="toast show" role="alert">
            <div class="toast-header bg-success text-white">
                <i class="fas fa-check-circle me-2"></i>
                <strong class="me-auto">Success</strong>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                @TempData["SuccessMessage"]
            </div>
        </div>
    </div>
}
