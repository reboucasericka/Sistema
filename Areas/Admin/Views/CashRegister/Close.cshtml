@model Sistema.Data.Entities.CashRegister

@{
    ViewData["Title"] = "Close Cash Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Close Cash Register</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Cash Register</a></li>
                    <li class="breadcrumb-item active">Close</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Close Cash Register</h3>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Cash Register Information:</strong><br>
                            <strong>Date:</strong> @Model.Date.ToString("dd/MM/yyyy")<br>
                            <strong>Initial Amount:</strong> €@Model.InitialValue.ToString("N2")<br>
                            <strong>Status:</strong> <span class="badge badge-success">@Model.Status</span>
                        </div>

                        <form asp-action="Close">
                            <input type="hidden" asp-for="CashRegisterId" />
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="FinalValue" class="control-label">Final Amount (€)</label>
                                        <input asp-for="FinalValue" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" required />
                                        <span asp-validation-for="FinalValue" class="text-danger"></span>
                                        <small class="form-text text-muted">Enter the actual cash amount counted</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Expected Amount (€)</label>
                                        <input type="text" class="form-control" value="@Model.InitialValue.ToString("N2")" readonly />
                                        <small class="form-text text-muted">Initial amount + movements</small>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label asp-for="Notes" class="control-label">Closing Notes</label>
                                <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Notes about the cash register closing..."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="alert alert-warning">
                                <i class="fas fa-exclamation-triangle"></i>
                                <strong>Warning!</strong> Closing the cash register will finalize all transactions for this day. This action cannot be undone.
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-lock"></i> Close Cash Register
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
