@model IEnumerable<Sistema.Data.Entities.CashRegister>

@{
    ViewData["Title"] = "Cash Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Cash Register</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Cash Register</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Cash Register Sessions</h3>
                        <div class="card-tools">
                            <a asp-controller="CashMovements" asp-action="Index" class="btn btn-info btn-sm">
                                <i class="fas fa-exchange-alt"></i> Movements
                            </a>
                            <a asp-action="Create" class="btn btn-success btn-sm">
                                <i class="fas fa-plus"></i> Open New Session
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Initial Amount</th>
                                        <th>Final Amount</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Date.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>@item.InitialValue.ToString("C")</td>
                                            <td>@item.FinalValue.ToString("C")</td>
                                            <td>
                                                @if (item.Status == "aberto")
                                                {
                                                    <span class="badge badge-success">Open</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Closed</span>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.CashRegisterId" class="btn btn-info btn-sm">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                @if (item.Status == "aberto")
                                                {
                                                    <a asp-action="Close" asp-route-id="@item.CashRegisterId" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-lock"></i> Close
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-cash-register fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">No cash register sessions found</h5>
                                <p class="text-muted">Start by opening your first cash register session.</p>
                                <a asp-action="Create" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Open First Session
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>