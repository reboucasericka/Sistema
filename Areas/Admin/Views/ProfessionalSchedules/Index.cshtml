@model IEnumerable<Sistema.Data.Entities.ProfessionalSchedule>

@{
    ViewData["Title"] = "Agenda dos Profissionais";
}

<h2 class="mb-4">🗓️ Agenda Semanal dos Profissionais</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">+ Nova Disponibilidade</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card border-primary shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@item.Professional?.User</h5>
                    <p class="card-text">
                        <strong>Dia:</strong> @item.DayOfWeek <br />
                        <strong>Horário:</strong> @item.StartTime - @item.EndTime
                    </p>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.ScheduleId" class="btn btn-warning btn-sm me-1">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.ScheduleId" class="btn btn-info btn-sm me-1">Detalhes</a>
                        <a asp-action="Delete" asp-route-id="@item.ScheduleId" class="btn btn-danger btn-sm">Excluir</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
