@model Sistema.Data.Entities.ProfessionalSchedule

@{
    ViewData["Title"] = "Editar Disponibilidade";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">✏️ Editar Disponibilidade</h3>

                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ScheduleId" />

                        <!-- Profissional -->
                        <div class="mb-3">
                            <label asp-for="ProfessionalId" class="form-label">Profissional</label>
                            <select asp-for="ProfessionalId" class="form-control" asp-items="ViewBag.ProfessionalId"></select>
                            <span asp-validation-for="ProfessionalId" class="text-danger"></span>
                        </div>

                        <!-- Dia da Semana -->
                        <div class="mb-3">
                            <label asp-for="DayOfWeek" class="form-label">Dia da Semana</label>
                            <select asp-for="DayOfWeek" class="form-control">
                                @foreach (DayOfWeek day in Enum.GetValues(typeof(DayOfWeek)))
                                {
                                    <option value="@day" selected="@(day == Model.DayOfWeek)">@day</option>
                                }
                            </select>
                            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
                        </div>

                        <!-- Hora Início -->
                        <div class="mb-3">
                            <label asp-for="StartTime" class="form-label">Hora Início</label>
                            <input asp-for="StartTime" type="time" class="form-control" />
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>

                        <!-- Hora Fim -->
                        <div class="mb-3">
                            <label asp-for="EndTime" class="form-label">Hora Fim</label>
                            <input asp-for="EndTime" type="time" class="form-control" />
                            <span asp-validation-for="EndTime" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                            <button type="submit" class="btn btn-success">Salvar Alterações</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
