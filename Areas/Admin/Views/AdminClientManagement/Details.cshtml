@model Sistema.Data.Entities.Customer
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Detalhes do Cliente";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">@Model.Name</h1>
            <p class="text-muted">Detalhes completos do cliente</p>
        </div>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.CustomerId })" class="btn btn-warning">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Informações do Cliente -->
        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Informações Pessoais</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Nome:</strong><br>
                        @Model.Name
                    </div>
                    <div class="mb-3">
                        <strong>Email:</strong><br>
                        @Model.Email
                    </div>
                    <div class="mb-3">
                        <strong>Telefone:</strong><br>
                        @Model.Phone
                    </div>
                    <div class="mb-3">
                        <strong>Endereço:</strong><br>
                        @Model.Address
                    </div>
                    <div class="mb-3">
                        <strong>Data de Nascimento:</strong><br>
                        @(Model.BirthDate?.ToString("dd/MM/yyyy") ?? "Não informado")
                    </div>
                    <div class="mb-3">
                        <strong>Data de Cadastro:</strong><br>
                        @Model.RegistrationDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="mb-3">
                        <strong>Status:</strong><br>
                        @if (Model.IsActive)
                        {
                            <span class="badge badge-success">Ativo</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Inativo</span>
                        }
                    </div>
                    @if (!string.IsNullOrEmpty(Model.AllergyHistory))
                    {
                        <div class="mb-3">
                            <strong>Histórico de Alergias:</strong><br>
                            <small class="text-muted">@Model.AllergyHistory</small>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="mb-3">
                            <strong>Observações:</strong><br>
                            <small class="text-muted">@Model.Notes</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Agendamentos -->
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Agendamentos</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.Appointments != null && ((List<dynamic>)ViewBag.Appointments).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Hora</th>
                                        <th>Profissional</th>
                                        <th>Serviço</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var appointment in ViewBag.Appointments)
                                    {
                                        <tr>
                                            <td>@appointment.Date.ToString("dd/MM/yyyy")</td>
                                            <td>@appointment.Time.ToString("HH:mm")</td>
                                            <td>@appointment.Professional?.Name</td>
                                            <td>@appointment.Service?.Name</td>
                                            <td>
                                                <span class="badge badge-@(appointment.Status switch {
                                                    "Confirmado" => "success",
                                                    "Pendente" => "warning",
                                                    "Cancelado" => "danger",
                                                    "Concluído" => "info",
                                                    _ => "secondary"
                                                })">@appointment.Status</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nenhum agendamento encontrado.</p>
                    }
                </div>
            </div>

            <!-- Histórico de Compras -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Histórico de Compras</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.BillingHistory != null && ((List<dynamic>)ViewBag.BillingHistory).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Valor Total</th>
                                        <th>Serviços</th>
                                        <th>Produtos</th>
                                        <th>Usuário</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var billing in ViewBag.BillingHistory)
                                    {
                                        <tr>
                                            <td>@billing.Data.ToString("dd/MM/yyyy")</td>
                                            <td>R$ @billing.ValorTotal.ToString("N2")</td>
                                            <td>@billing.QuantidadeServicos</td>
                                            <td>@billing.QuantidadeProdutos</td>
                                            <td>@billing.Usuario?.FirstName</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nenhuma compra encontrada.</p>
                    }
                </div>
            </div>

            <!-- Recebíveis -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recebíveis</h6>
                </div>
                <div class="card-body">
                    @if (ViewBag.Receivables != null && ((List<dynamic>)ViewBag.Receivables).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Descrição</th>
                                        <th>Valor</th>
                                        <th>Data Lançamento</th>
                                        <th>Data Vencimento</th>
                                        <th>Data Pagamento</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var receivable in ViewBag.Receivables)
                                    {
                                        <tr>
                                            <td>@receivable.Descricao</td>
                                            <td>R$ @receivable.Valor.ToString("N2")</td>
                                            <td>@receivable.DataLanc.ToString("dd/MM/yyyy")</td>
                                            <td>@receivable.DataVenc.ToString("dd/MM/yyyy")</td>
                                            <td>@(receivable.DataPgto?.ToString("dd/MM/yyyy") ?? "-")</td>
                                            <td>
                                                @if (receivable.Pago)
                                                {
                                                    <span class="badge badge-success">Pago</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">Pendente</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nenhum recebível encontrado.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
