@model IEnumerable<Sistema.Data.Entities.Product>

@{
    ViewData["Title"] = "Produtos";
    Layout = "_Layout";
}

<section class="products showcase">
    <div class="wrapper">
        <h2>Nossos Produtos</h2>
        <div class="product-grid">
            @foreach (var item in Model)
            {
                <div class="product-card">
                    <img src="@item.ImageFullPath" alt="@item.Name" />
                    <h3>@item.Name</h3>
                    <p>@item.Description</p>
                    <span class="price">@item.SalePrice.ToString("C", new System.Globalization.CultureInfo("pt-PT"))</span>
                    <a href="#" class="btn btn-primary">Comprar</a>
                </div>
            }
        </div>
    </div>
</section>
