@{
    ViewData["Title"] = "Teste DataTables";
}

<div class="container mt-5">
    <h2>Teste DataTables</h2>
    <p>Esta página testa se o DataTables está funcionando corretamente.</p>
    
    <table id="testTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Data</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>João Silva</td>
                <td>joao@email.com</td>
                <td>2024-01-15</td>
            </tr>
            <tr>
                <td>2</td>
                <td>Maria Santos</td>
                <td>maria@email.com</td>
                <td>2024-01-16</td>
            </tr>
            <tr>
                <td>3</td>
                <td>Pedro Costa</td>
                <td>pedro@email.com</td>
                <td>2024-01-17</td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('jQuery carregado:', typeof $ !== 'undefined');
            console.log('DataTables disponível:', typeof $.fn.dataTable !== 'undefined');
            
            if (typeof $.fn.dataTable !== 'undefined') {
                $('#testTable').DataTable({
                    language: {
                        url: "//cdn.datatables.net/plug-ins/1.13.8/i18n/pt-PT.json"
                    }
                });
                console.log('DataTables inicializado com sucesso!');
            } else {
                console.error('DataTables não está disponível!');
            }
        });
    </script>
}
