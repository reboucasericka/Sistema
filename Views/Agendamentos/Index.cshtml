            </th>
            <th>
                @Html.DisplayNameFor(model => model.LembreteEnviado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExportadoExcel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExportadoPdf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servico.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profissional.Especialidade)
