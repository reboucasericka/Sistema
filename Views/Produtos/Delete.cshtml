                    @Html.DisplayFor(model => model.Fornecedor.Nome)
                </dd>
            </dl>
        </div>

        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(item.ImageProductFile))
            {
                <img src="@Url.Content(item.ImageProductFile)" alt="Imagem do Produto" style="width:100px; height:auto; max-width: 100px; max-height: 100px;" />
            }
        </div>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProdutoId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </form>
 </div>