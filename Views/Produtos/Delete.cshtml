                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.NivelEstoqueMinimo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NivelEstoqueMinimo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Fornecedor)
