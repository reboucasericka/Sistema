@{
   Layout = "_LoginLayout";   // usa o layout que você já tem
    ViewData["Title"] = "Login";
}
<h2>Login</h2>


<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
            <div class="panel panel-default form-login" style="opacity:0.9; border-radius: 20px">
                <div class="panel-heading" align="center" style="border-top-right-radius: 20px; border-top-left-radius: 20px">
                    <img src="~/img/logo4.png" width="250px" asp-append-version="true" />
                </div>
                <div class="panel-body">
                    <form method="post" asp-controller="Authentication" asp-action="Login">   <!--DEIXEI ASSIM. TEM PROBLEMA?-->               



                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail ou NIF" name="email" type="text" value="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Senha" name="senha" type="password" value="">
                            </div>
                            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Login">
                        </fieldset>
                        @if (ViewBag.Erro != null)
                        {
                            <div class="alert alert-danger mt-2">@ViewBag.Erro</div> <!--ACRESCENTEI AQUI-->
                        }

                        <p class="recuperar">
                            <a title="Clique para recuperar a senha" asp-controller="Authentication" asp-action="RecuperarSenha">Recuperar Senha</a> <!--ACRESCENTEI AQUI-->
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal Recuperar Senha -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="width:400px">
      <div class="modal-header">
        <h5 class="modal-title">Recuperar Senha</h5>
        <button id="btn-fechar-rec" type="button" class="close" data-dismiss="modal" aria-label="Close" style="margin-top: -20px">
          <span aria-hidden="true" >&times;</span>
        </button>
      </div>
      <form asp-controller="Authentication" asp-action="RecuperarSenha" method="post">
        <div class="modal-body">
            <input placeholder="Digite seu Email" class="form-control" type="email" name="email" required>
            <br>
            <small><div id="mensagem-recuperar" align="center"></div></small>
        </div>
        <div class="modal-footer">      
          <button type="submit" class="btn btn-primary">Recuperar</button>
        </div>
      </form>
    </div>
  </div>
</div>
