@model IEnumerable<Sistema.Data.Entities.CategoriaProduto>

@{
    ViewData["Title"] = "Index";
}

<h2>Categorias de Produtos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Categoria</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          <td>@item.Nome</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaProdutoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaProdutoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaProdutoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
