@model Sistema.Models.RegisterNewUserViewModel
@{
    ViewData["Title"] = "Registro";
    Layout = "_Layout";
}

<div class="hero_area">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg">
                    <div class="card-header bg-secondary text-white text-center">
                        <h4 class="mb-0">
                            <i class="fas fa-user-plus me-2"></i>
                            Cadastro de Usuário
                        </h4>
                    </div>
                    <div class="card-body p-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label">
                                        <i class="fas fa-user me-2"></i>
                                        Nome
                                    </label>
                                    <input asp-for="FirstName" class="form-control" placeholder="Digite seu nome" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label">
                                        <i class="fas fa-user me-2"></i>
                                        Sobrenome
                                    </label>
                                    <input asp-for="LastName" class="form-control" placeholder="Digite seu sobrenome" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">
                                    <i class="fas fa-at me-2"></i>
                                    Username
                                </label>
                                <input asp-for="Username" class="form-control" placeholder="Digite seu username" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">
                                    <i class="fas fa-lock me-2"></i>
                                    Senha
                                </label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Confirm" class="form-label">
                                    <i class="fas fa-lock me-2"></i>
                                    Confirmar Senha
                                </label>
                                <input asp-for="Confirm" type="password" class="form-control" placeholder="Confirme sua senha" />
                                <span asp-validation-for="Confirm" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-secondary">
                                    <i class="fas fa-user-plus me-2"></i>
                                    Cadastrar Usuário
                                </button>
                                <a asp-action="Login" class="btn btn-outline-primary">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Já tenho uma conta
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}