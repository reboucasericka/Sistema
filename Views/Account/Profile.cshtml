@model Sistema.Models.Admin.ProfileViewModel

@{
    ViewData["Title"] = "Perfil";
    // Usar layout baseado no role do usuário
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}
<!--Views/Account/Profile-->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Meu Perfil</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index">Home</a></li>
                    }
                    else
                    {
                        <li class="breadcrumb-item"><a asp-area="Public" asp-controller="Appointment" asp-action="Index">Home</a></li>
                    }
                    <li class="breadcrumb-item active">Perfil</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Informações do Perfil</h3>
                        <div class="card-tools">
                            <a asp-action="Settings" class="btn btn-primary btn-sm">
                                <i class="fas fa-cog"></i> Configurações
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-4">Nome:</dt>
                                    <dd class="col-sm-8">@Model.FirstName</dd>
                                    
                                    <dt class="col-sm-4">Sobrenome:</dt>
                                    <dd class="col-sm-8">@Model.LastName</dd>
                                    
                                    <dt class="col-sm-4">Email:</dt>
                                    <dd class="col-sm-8">@Model.Email</dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <dt class="col-sm-4">Telefone:</dt>
                                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                                    }
                                    
                                    <dt class="col-sm-4">Conta criada em:</dt>
                                    <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>
                                    
                                    <dt class="col-sm-4">Status:</dt>
                                    <dd class="col-sm-8">
                                        @if (Model.Active)
                                        {
                                            <span class="badge badge-success">Ativo</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">Inativo</span>
                                        }
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Ações Rápidas</h3>
                    </div>
                    <div class="card-body">
                        <a asp-action="Settings" class="btn btn-primary btn-block mb-2">
                            <i class="fas fa-cog"></i> Configurações
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-warning btn-block mb-2">
                            <i class="fas fa-key"></i> Alterar Senha
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Informações da Sessão</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Usuário:</strong> @User.Identity.Name</p>
                        <p><strong>Último acesso:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
