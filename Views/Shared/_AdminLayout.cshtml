<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Painel Administrativo</title>
    
    <!-- Bootstrap 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Font Awesome 6 -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    
    <!-- CSS Local -->
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <!-- CSS Específico do Painel Admin -->
    <link rel="stylesheet" href="~/css/admin-panel.css" asp-append-version="true" />
</head>
<body class="bg-light admin-panel d-flex flex-nowrap">
    <!-- Toggle para mobile -->
    <button id="sidebarToggle" class="btn btn-dark d-lg-none position-fixed m-3" style="z-index: 1040;">
        <i class="fas fa-bars"></i>
    </button>

    <div class="d-flex flex-nowrap admin-wrapper">
        <!-- Sidebar -->
        <nav class="sidebar bg-dark text-white p-3">
            <a class="navbar-brand text-white mb-4 d-block" href="/Admin/Admin">
                <i class="fas fa-tachometer-alt me-2"></i>Painel
            </a>

            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/Admin"><i class="fas fa-home me-1"></i>Dashboard</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/AdminClients"><i class="fas fa-users me-1"></i>Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/AdminProfessionals"><i class="fas fa-user-tie me-1"></i>Profissionais</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/AdminAppointments"><i class="fas fa-calendar-alt me-1"></i>Agendamentos</a>
                </li>

                <!-- Dropdown: Produtos -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-boxes me-1"></i>Produtos
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="/Admin/AdminProducts">Produtos</a></li>
                        <li><a class="dropdown-item" href="/Admin/AdminProductCategories">Categorias de Produtos</a></li>
                        <li><a class="dropdown-item" href="/Admin/AdminSuppliers">Fornecedores</a></li>
                    </ul>
                </li>

                <!-- Dropdown: Serviços -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-concierge-bell me-1"></i>Serviços
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="/Admin/AdminServices">Serviços</a></li>
                        <li><a class="dropdown-item" href="/Admin/AdminServiceProfessionals">Por Profissional</a></li>
                    </ul>
                </li>

                <!-- Dropdown: Financeiro -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle text-white" href="#" data-bs-toggle="dropdown">
                        <i class="fas fa-dollar-sign me-1"></i>Financeiro
                    </a>
                    <ul class="dropdown-menu dropdown-menu-dark">
                        <li><a class="dropdown-item" href="/Admin/AdminReceivables"><i class="fas fa-arrow-down me-1"></i>Recebimentos</a></li>
                        <li><a class="dropdown-item" href="/Admin/AdminPayables"><i class="fas fa-arrow-up me-1"></i>Pagamentos</a></li>
                        <li><a class="dropdown-item" href="/Admin/AdminCashMovements"><i class="fas fa-exchange-alt me-1"></i>Movimentações</a></li>
                        <li><a class="dropdown-item" href="/Admin/AdminCashRegister"><i class="fas fa-cash-register me-1"></i>Caixa</a></li>
                        <li><a class="dropdown-item" href="/Admin/AdminCashRegister/Index"><i class="fas fa-shopping-cart me-1"></i>PDV</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Admin/AdminReports"><i class="fas fa-chart-bar me-1"></i>Relatórios</a></li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="/Admin/AdminSettings"><i class="fas fa-cog me-1"></i>Configurações</a>
                </li>
            </ul>

            <hr class="bg-light" />
            <div class="text-white small">
                <i class="fas fa-user me-1"></i>@User.Identity?.Name
            </div>
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="mt-2">
                <button type="submit" class="btn btn-outline-light btn-sm w-100">
                    <i class="fas fa-sign-out-alt me-1"></i>Sair
                </button>
            </form>
        </nav>

        <!-- Main Content -->
        <main class="flex-grow-1 p-4 admin-content">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    
    <!-- Script para toggle da sidebar -->
    <script>
        $(document).ready(function () {
            $('#sidebarToggle').on('click', function () {
                $('.sidebar').toggleClass('active');
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>