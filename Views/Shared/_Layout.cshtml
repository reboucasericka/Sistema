

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ewellin Jordão</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Fontes e Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">


    <!-- Slick (caso use slider) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" />
    <!-- Slick CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />

    <!-- Slick Theme (opcional) -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />


    <!-- Tema principal -->
    <link rel="stylesheet" href="~/css/style.css" />

    



</head>
<body>
    <!-- HEADER -->
    <header>
        <div class="wrapper">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/1.jpg" alt="Ewellin Jordão" />
                </a>
            </div>
            
            <!-- Menu Desktop -->
            <nav class="nav-desktop">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Início</a></li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Ewellin</a>
                        <div class="dropdown-content">
                            <a asp-controller="Institutional" asp-action="About">Sobre nós</a>
                            <a asp-controller="Institutional" asp-action="Academy">Academia</a>
                        </div>
                    </li>

                    <li><a asp-controller="Appointments" asp-action="Index">Agendamento Online</a></li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Tabela de preços</a>
                        <div class="dropdown-content">
                            <a href="#">Lisboa</a>
                            <a href="#">Porto</a>
                            <a href="#">Coimbra</a>
                        </div>
                    </li>
                    <li><a asp-controller="Services" asp-action="Index">Serviços</a></li>
                    <li><a asp-controller="Products" asp-action="Index">Produtos</a></li>
                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Contatos</a>
                        <div class="dropdown-content">
                            <a href="#">Lojas</a>
                            <a href="#">Recrutamento</a>
                        </div>
                    </li>
                </ul>
            </nav>

            <!-- Menu Mobile -->
            <nav class="nav-mobile">
                <a asp-controller="Home" asp-action="Index">Início</a>
                <a asp-controller="Institutional" asp-action="About">Sobre nós</a>
                <a asp-controller="Institutional" asp-action="Academy">Academia</a>

                <a asp-controller="Appointments" asp-action="Index">Agendamento</a>
                <a href="#">Tabela de preços</a>
                <a asp-controller="Services" asp-action="Index">Serviços</a>
                <a asp-controller="Products" asp-action="Index">Produtos</a>
                <a href="#">Contatos</a>
            </nav>

            <!-- Menu Hambúrguer -->
            <div class="menu-hamburguer">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
        </div>
    </header>    

    <!-- CONTEÚDO DAS PÁGINAS -->
    <main role="main">
        @RenderBody()
    </main>



    <!-- FOOTER -->
    <footer>
        <div class="wrapper">
            <div class="box">
                <div class="item">
                    <div class="logo">
                        <img src="~/images/logo_bar.png" alt="Ewellin Jordão" style="height: 30px;">
                        <p>O olhar que marca.</p>
                    </div>
                    <p>R. Vale das Flores 23, Alto de São João, 3030-486 Coimbra - Portugal</p>
                    <p>ewellinjordao@gmail.com</p>
                    <p>(+351) 910 375 956</p>

                    <div class="social">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-pinterest"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="item">
                    <h2>MAPA</h2>
                    <img src="~/images/mapa_footer.png" alt="Mapa" style="max-width: 200px;">
                </div>
                <div class="item">
                    <ul>
                        <li><a href="#">Programa de Fidelidade</a></li>
                        <li><a href="#">Política de Privacidade</a></li>
                        <li><a href="#">Termos e Condições Gerais de Venda</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>


    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/menu-hamburguer.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    <!-- jQuery (necessário para slick) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Slick JS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <script>
        $(document).ready(function(){
            $('.slider_home').slick({
                dots: true,
                arrows: false,
                infinite: true,
                autoplay: true,
                autoplaySpeed: 4000,
                fade: true,
                cssEase: 'linear'
            });
        });
    </script>


</body>
</html>
