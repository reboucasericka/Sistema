<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ewellin Jordão</title>

    <!-- CSS Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">


    <!-- CSS DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Sacramento&display=swap" rel="stylesheet">


    <!-- Slick (caso use slider) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css" />
    <!-- Slick CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />

    <!-- Slick Theme (opcional) -->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />


    <!-- Tema principal -->
    <link rel="stylesheet" href="~/css/style.css" />





</head>
<body>
    <!-- HEADER -->
    <header>
        <div class="wrapper">
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <img src="~/images/1.jpg" alt="Ewellin Jordão" />
                </a>
            </div>

            <!-- Menu Desktop -->
            <nav class="nav-desktop">
                <ul class="d-flex justify-content-end align-items-center gap-3">
                    <li><a asp-controller="Home" asp-action="Index" asp-area="">Início</a></li>

                    <li class="dropdown">
                        <a href="javascript:void(0)" class="dropbtn">Ewellin</a>
                        <div class="dropdown-content">
                            <a asp-area="Public" asp-controller="PublicInstitutional" asp-action="About">Sobre nós</a>
                            <a asp-area="Public" asp-controller="PublicInstitutional" asp-action="Academy">Academia</a>
                        </div>
                    </li>
                    <li><a asp-area="Public" asp-controller="PublicAppointment" asp-action="Index">Agendamento Online</a></li>
                    <li><a asp-area="Public" asp-controller="PublicPrice" asp-action="Index">Tabela de preços</a></li>
                    <li><a asp-area="Public" asp-controller="PublicServices" asp-action="Index">Serviços</a></li>                   
                    <li><a asp-area="Public" asp-controller="PublicProducts" asp-action="Index">Produtos</a></li>
                    <li><a asp-area="Public" asp-controller="PublicRecrutamento" asp-action="Index">Recrutamento</a></li>              
                    <li><a asp-controller="Account" asp-action="Login" asp-area="">Login</a></li>

                </ul>
            </nav>

            <!-- Menu Mobile -->
            <nav class="nav-mobile">
                <a asp-controller="Home" asp-action="Index" asp-area="">Início</a>
                <a asp-area="Public" asp-controller="PublicInstitutional" asp-action="About">Sobre nós</a>
                <a asp-area="Public" asp-controller="PublicInstitutional" asp-action="Academy">Academia</a>
                <a asp-area="Public" asp-controller="PublicAppointment" asp-action="Index">Agendamento Online</a>
                <a asp-area="Public" asp-controller="PublicPrice" asp-action="Index">Tabela de preços</a>
                <a asp-area="Public" asp-controller="PublicServices" asp-action="Index">Serviços</a>
                <a asp-area="Public" asp-controller="PublicProducts" asp-action="Index">Produtos</a>
            </nav>

            <!-- Menu Hambúrguer -->
            <div class="menu-hamburguer">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
        </div>
    </header>
    <!-- CONTEÚDO DAS PÁGINAS -->
    <main role="main">
        @RenderBody()
    </main>
    <!-- FOOTER -->
    <footer>
        <div class="wrapper">
            <div class="box">
                <div class="item">
                    <div class="logo">
                        <img src="~/images/About/about-img.jpg" alt="Ewellin Jordão" style="height: 30px;">
                        <p>O olhar que marca.</p>
                    </div>
                    <p>R. Vale das Flores 23, Alto de São João, 3030-486 Coimbra - Portugal</p>
                    <p>ewellinjordao@gmail.com</p>
                    <p>(+351) 910 375 956</p>

                    <div class="social">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-pinterest"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="item">
                    <h2>MAPA</h2>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3615.1611306068016!2d-8.41276092360632!3d40.1937568691796!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd22f935721f57a9%3A0x24e30d9bd3d5a6d6!2sEWELLIN%20JORD%C3%83O%20BEAUTY%20ACADEMY!5e1!3m2!1spt-PT!2spt!4v1759487379714!5m2!1spt-PT!2spt"
                            width="400"
                            height="300"
                            style="border:0; border-radius:8px;"
                            allowfullscreen=""
                            loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>

                <div class="item">
                    <ul>
                        <li><a href="~/pdf/ProgramaFidelidade.pdf" target="_blank">Programa de Fidelidade</a></li>
                        <li><a href="~/pdf/PoliticaPrivacidade.pdf" target="_blank">Política de Privacidade</a></li>
                        <li><a href="~/pdf/TermosCondicoes.pdf" target="_blank">Termos e Condições Gerais de Venda</a></li>
                    </ul>
                </div>

            </div>
        </div>
    </footer>


    <!-- jQuery (primeiro sempre) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap 5 (com Popper embutido) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    <!-- Slick JS -->
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

    <!-- Scripts locais (por último para evitar conflitos) -->
    <script src="~/js/menu-hamburguer.js" asp-append-version="true"></script>

    <!-- Inicialização global -->
    <script>
        $(document).ready(function(){
            try {
                // Inicializar DataTables se existirem tabelas
                if ($('table').length) {
                    $('table').DataTable({
                        language: {
                            url: "//cdn.datatables.net/plug-ins/1.13.8/i18n/pt-PT.json"
                        }
                    });
                }

                // Inicializar Slick slider se existir
                if ($('.slider_home').length) {
                    $('.slider_home').slick({
                        dots: true,
                        arrows: false,
                        infinite: true,
                        autoplay: true,
                        autoplaySpeed: 4000,
                        fade: true,
                        cssEase: 'linear'
                    });
                }
            } catch (error) {
                console.error('Erro na inicialização dos componentes:', error);
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>
